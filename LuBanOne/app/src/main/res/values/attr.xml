<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="SideBarView">
        <attr name="sidebar_nor_background" format="color"/>
        <attr name="sidebar_press_background" format="color"/>
        <attr name="sidebar_text_size" format="dimension"/>
        <attr name="sidebar_text_color_nor" format="color"/>
        <attr name="sidebar_text_color_press" format="color"/>

    </declare-styleable>

    <declare-styleable name="ToggleButton">
        <attr name="tbBorderWidth" format="dimension"/>
        <attr name="tbOffBorderColor" format="reference|color"/>
        <attr name="tbOffColor" format="reference|color"/>
        <attr name="tbOnColor" format="reference|color"/>
        <attr name="tbSpotColor" format="reference|color"/>
        <attr name="tbAnimate" format="reference|boolean"/>
        <attr name="tbAsDefaultOn" format="reference|boolean"/>
    </declare-styleable>

    <declare-styleable name="PraiseListView">
        <attr name="item_color" format="color"/>
        <attr name="item_selector_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="ExpandTextView">
        <attr name="showLines" format="integer"/>
    </declare-styleable>


</resources>