<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@color/title_background_blue"/>

    <include layout="@layout/message_conversation_title"
      android:visibility="visible"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/activity_message_back"
            android:layout_width="10dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/back_left_white"
            android:textColor="@color/white"
            android:layout_marginRight="5dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/blue"
            android:gravity="center"
            android:text="@string/message_list_title"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:id="@+id/activity_message_title"/>

        <TextView
            android:id="@+id/activity_message_add"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/add"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/activity_message_add_friend"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/add"
            android:textColor="@color/white"
            android:visibility="gone"/>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/activity_message_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/gray_e7e7e7"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <LinearLayout
          android:id="@+id/message_linear"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:orientation="vertical">
            <FrameLayout
              android:layout_width="match_parent"
              android:layout_height="30dp">
                <ImageButton
                  android:id="@+id/activity_message_msg"
                  android:layout_width="25dp"
                  android:layout_height="24dp"
                  android:background="@null"
                  android:scaleType="fitCenter"
                  android:layout_gravity="center_horizontal|bottom"
                  android:paddingBottom="2dp"
                  android:src="@drawable/selector_table_system_message"/>
                <TextView
                  android:id="@+id/system_unread"
                  android:layout_width="15dp"
                  android:layout_height="15dp"
                  android:layout_marginTop="2dp"
                  android:layout_gravity="center"
                  android:background="@drawable/red_dot_small"
                  android:textSize="7sp"
                  android:textColor="@color/white"
                  android:text=""
                  android:layout_marginLeft="10dp"
                  android:layout_marginBottom="5dp"
                  android:gravity="center"
                  android:visibility="gone"/>
            </FrameLayout>

            <TextView
              android:id="@+id/activity_message_text"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textSize="12sp"
              android:textColor="@color/title_background_blue"
              android:text="@string/system_message"
              android:gravity="center"
              android:layout_marginBottom="5dp"/>
        </LinearLayout>

        <LinearLayout
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:orientation="vertical"
          android:id="@+id/conversation_linear">
            <FrameLayout
              android:layout_width="match_parent"
              android:layout_height="30dp">
                <ImageButton
                  android:id="@+id/activity_message_address"
                  android:layout_width="25dp"
                  android:layout_height="23dp"
                  android:background="@null"
                  android:scaleType="fitCenter"
                  android:layout_gravity="center_horizontal|bottom"
                  android:paddingBottom="2dp"
                  android:src="@drawable/selector_table_friend_message"/>
                <TextView
                  android:id="@+id/friend_unread"
                  android:layout_width="15dp"
                  android:layout_height="15dp"
                  android:layout_marginTop="2dp"
                  android:layout_gravity="center"
                  android:background="@drawable/red_dot_small"
                  android:textSize="7sp"
                  android:textColor="@color/white"
                  android:text=""
                  android:layout_marginLeft="10dp"
                  android:layout_marginBottom="5dp"
                  android:gravity="center"
                  android:visibility="gone"/>
            </FrameLayout>

            <TextView
              android:id="@+id/activity_address_text"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textSize="12sp"
              android:textColor="@color/_888888"
              android:text="@string/friend_message"
              android:gravity="center"
              android:layout_marginBottom="5dp"/>
        </LinearLayout>
        <LinearLayout
          android:id="@+id/address_linear"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:orientation="vertical">
            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="30dp"
              android:orientation="vertical"
              android:layout_gravity="bottom"
              android:gravity="bottom">
            <ImageButton
              android:id="@+id/activity_message_moments"
              android:layout_width="25dp"
              android:layout_height="23dp"
              android:background="@null"
              android:scaleType="fitCenter"
              android:layout_gravity="center_horizontal|bottom"
              android:paddingBottom="2dp"
              android:src="@drawable/selector_table_address"/>
            </LinearLayout>
            <TextView
              android:id="@+id/activity_moments_text"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textSize="12sp"
              android:textColor="@color/_888888"
              android:text="@string/address_list_title"
              android:gravity="center"
              android:layout_marginBottom="5dp"/>

        </LinearLayout>


        <ImageButton
            android:id="@+id/activity_message_selfinfo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@drawable/selector_table_training"
            android:visibility="gone"/>

    </LinearLayout>

</LinearLayout>