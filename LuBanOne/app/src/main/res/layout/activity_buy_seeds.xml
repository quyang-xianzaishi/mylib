<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/activity_buy_seeds"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#f0f0f2"
  android:orientation="vertical"
  tools:context="com.example.administrator.lubanone.activity.home.BuySeedsActivity">

  <TextView
    android:layout_width="match_parent"
    android:layout_height="25dp"
    android:background="#1D2C8C" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="#1D2C8C"
    android:gravity="center_vertical"
    android:orientation="horizontal">


    <ImageView
      android:id="@+id/iv_back_click"
      android:layout_width="22dp"
      android:layout_height="18dp"
      android:layout_marginLeft="15dp"
      android:layout_centerVertical="true"
      android:src="@mipmap/icon_back" />


    <TextView
      android:id="@+id/tv_back"
      android:layout_width="30dp"
      android:layout_height="30dp"
      android:layout_centerVertical="true"
      android:background="@color/transparenc_all"
      android:visibility="gone" />

    <TextView
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:layout_marginRight="37dp"
      android:gravity="center"
      android:text="@string/buy"
      android:textColor="@color/white"
      android:textSize="18sp" />

  </LinearLayout>

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none">
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <RelativeLayout
        android:id="@+id/tv_asserts"
        android:layout_width="match_parent"
        android:layout_height="257dp"
        android:background="@mipmap/pur_bg_2x">

        <TextView
          android:id="@+id/tv_all_money"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:layout_centerHorizontal="true"
          android:text="@string/shenyu_time"
          android:textColor="#fefefe"
          android:textSize="13sp" />

        <ImageView
          android:id="@+id/iv"
          android:layout_width="13dp"
          android:layout_height="13dp"
          android:layout_marginLeft="5dp"
          android:layout_alignBottom="@+id/tv_all_money"
          android:layout_alignTop="@+id/tv_all_money"
          android:layout_toRightOf="@+id/tv_all_money"
          android:scaleType="fitCenter"
          android:src="@mipmap/icon_explain_one" />


        <TextView
          android:id="@+id/tv_info"
          android:layout_width="20dp"
          android:layout_height="1.5dp"
          android:layout_marginTop="5dp"
          android:layout_below="@+id/tv_all_money"
          android:layout_centerHorizontal="true"
          android:alpha="0.3"
          android:background="@color/white"
          android:textSize="11sp" />


        <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="37dp"
          android:layout_below="@+id/tv_all_money"
          android:gravity="center">

          <RelativeLayout
            android:id="@+id/rl_hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
              android:id="@+id/tv_hours"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerHorizontal="true"
              android:gravity="center"
              android:text="00"
              android:textColor="@color/white"
              android:textSize="45sp" />

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="10dp"
              android:layout_marginLeft="7dp"
              android:layout_marginRight="7dp"
              android:layout_toRightOf="@id/tv_hours"
              android:text=":"
              android:textColor="@color/white"
              android:textSize="25sp" />


          </RelativeLayout>

          <RelativeLayout
            android:id="@+id/rl_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/rl_hours"
            android:gravity="center">

            <TextView
              android:id="@+id/tv_minus"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerHorizontal="true"
              android:gravity="center"
              android:text="00"
              android:textColor="@color/white"
              android:textSize="45sp" />

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="10dp"
              android:layout_marginLeft="7dp"
              android:layout_marginRight="7dp"
              android:layout_toRightOf="@id/tv_minus"
              android:text=":"
              android:textColor="@color/white"
              android:textSize="25sp" />


          </RelativeLayout>


          <RelativeLayout
            android:id="@+id/rl_seconds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/rl_minus"
            android:gravity="center">

            <TextView
              android:id="@+id/tv_seconds"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerHorizontal="true"
              android:gravity="center"
              android:text="00"
              android:textColor="@color/white"
              android:textSize="45sp" />


          </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="75dp"
          android:layout_alignParentBottom="true"
          android:layout_alignParentLeft="true"
          android:layout_alignParentStart="true"
          android:background="@color/cff"
          android:orientation="horizontal">

          <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="top">

            <TextView
              android:id="@+id/tv_dream_package"
              style="@style/new_all_scan_style"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="15dp"
              android:layout_alignParentTop="true"
              android:layout_centerHorizontal="true"
              android:text="@string/pay_count"
              android:textSize="11sp" />


            <TextView
              android:id="@+id/tv_sow_count"
              style="@style/new_all_scan_style_one"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="5dp"
              android:layout_below="@+id/tv_dream_package"
              android:layout_centerHorizontal="true"
              android:textColor="@color/white"
              android:textSize="25sp" />

          </RelativeLayout>


          <TextView
            android:layout_width="1dp"
            android:layout_height="27dp"
            android:layout_gravity="center_vertical"
            android:alpha="0.2"
            android:background="@color/cf6f6f6" />


          <RelativeLayout
            android:id="@+id/rl_money_package"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="top">

            <TextView
              android:id="@+id/tv_money_package"
              style="@style/new_all_scan_style"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="15dp"
              android:layout_centerHorizontal="true"
              android:text="@string/cuihuaji_danwei"
              android:textSize="11sp" />


            <TextView
              android:id="@+id/tv_cuihuaji_count"
              style="@style/new_all_scan_style_one"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="5dp"
              android:layout_below="@+id/tv_money_package"
              android:layout_centerHorizontal="true"
              android:text=""
              android:textColor="@color/white"
              android:textSize="25sp" />

          </RelativeLayout>
        </LinearLayout>
      </RelativeLayout>

      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/white">

        <TextView
          android:id="@+id/tv_buy_seed"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="19dp"
          android:layout_marginBottom="12dp"
          android:layout_marginStart="15dp"
          android:layout_marginLeft="15dp"
          android:layout_alignParentLeft="true"
          android:layout_alignParentStart="true"
          android:layout_alignParentTop="true"
          android:text="@string/buy_seed_count"
          android:textColor="@color/c333"
          android:textSize="13sp" />

        <EditText
          android:id="@+id/et_seed_count"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/tv_buy_seed"
          android:paddingLeft="15dp"
          android:background="@null"
          android:gravity="center_vertical"
          android:hint="@string/please_input_seeds_count"
          android:inputType="number"
          android:textColor="@color/c333"
          android:textColorHint="@color/c999"
          android:textSize="13sp" />


      </RelativeLayout>


      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal">
        <TextView
          android:layout_width="15dp"
          android:layout_height="1dp"
          android:background="@color/white" />

        <TextView
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@color/cf6f6f6" />
      </LinearLayout>

      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/white">

        <TextView
          android:id="@+id/tv_should_pay_new"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:layout_marginBottom="12dp"
          android:layout_marginLeft="15dp"
          android:text="@string/should_pay_new"
          android:textColor="@color/c333"
          android:textSize="13sp" />

        <TextView
          android:id="@+id/tv_should_pay"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_alignParentStart="true"
          android:layout_below="@+id/tv_should_pay_new"
          android:paddingLeft="15dp"
          android:gravity="center_vertical"
          android:text=""
          android:textColor="@color/c333"
          android:textSize="13sp" />

      </RelativeLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal">
        <TextView
          android:layout_width="15dp"
          android:layout_height="1dp"
          android:background="@color/white" />

        <TextView
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@color/cf6f6f6" />
      </LinearLayout>


      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/white">

        <TextView
          android:id="@+id/tv_pay"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:layout_marginBottom="12dp"
          android:layout_marginLeft="15dp"
          android:text="@string/input_safe_pwd_new"
          android:textColor="@color/c333"
          android:textSize="13sp" />

        <EditText
          android:id="@+id/et_safe_code"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/tv_pay"
          android:paddingLeft="15dp"
          android:background="@null"
          android:gravity="center_vertical"
          android:hint="@string/please_input_safe_code"
          android:inputType="numberPassword"
          android:textColor="@color/c333"
          android:textColorHint="@color/c999"
          android:textSize="13sp" />

      </RelativeLayout>


      <Button
        android:id="@+id/btn_commit"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="80dp"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:background="@drawable/btn_blue_shape_8"
        android:text="@string/commits"
        android:textColor="@color/white"
        android:textSize="15sp" />

    </LinearLayout>
  </ScrollView>


</LinearLayout>
