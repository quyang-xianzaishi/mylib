<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="12dp">
    
    <ImageView
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/em_chat_video_normal"
        android:id="@+id/training_info_item_image"
        android:layout_marginRight="10dp"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:id="@+id/training_info_item_title"
            android:text="@string/active_four_step"
            android:textSize="14sp"
            android:textColor="#666"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:lines="2"
            android:id="@+id/training_info_item_content"
            android:text="@string/active_four_step"
            android:gravity="bottom"
            android:textSize="12sp"
            android:textColor="#666"
            android:layout_gravity="bottom"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/training_info_item_detail"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_gravity="center"
        android:src="@mipmap/next_2x"/>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#666"/>

</LinearLayout>