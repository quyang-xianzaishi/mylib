<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">
  <com.example.administrator.lubanone.customview.UnScrollViewPager
    android:id="@+id/train_viewpager"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    />

  <View
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:background="@color/gray_e7e7e7"/>
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="49dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <LinearLayout
      android:id="@+id/train_center_bottom_layout"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:gravity="center"
      android:orientation="vertical">
      <ImageView
        android:id="@+id/train_center_bottom_image"
        android:layout_width="21dp"
        android:layout_height="18dp"
        android:src="@drawable/selector_train_table_center"/>

      <TextView
        android:id="@+id/train_center_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/train_center"
        android:textColor="@drawable/selector_bottom_table_text"
        android:textSize="12sp"/>
    </LinearLayout>

    <LinearLayout
      android:id="@+id/train_test_bottom_layout"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:gravity="center"
      android:orientation="vertical">
      <ImageView
        android:id="@+id/train_test_bottom_image"
        android:layout_width="21dp"
        android:layout_height="19dp"
        android:src="@drawable/selector_train_table_exam"/>

      <TextView
        android:id="@+id/train_test_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/train_test_center"
        android:textColor="@drawable/selector_bottom_table_text"
        android:textSize="12sp"/>
    </LinearLayout>

    <LinearLayout
      android:id="@+id/train_mine_bottom_layout"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:gravity="center"
      android:orientation="vertical">
      <ImageView
        android:id="@+id/train_mine_bottom_image"
        android:layout_width="18dp"
        android:layout_height="19.5dp"
        android:src="@drawable/selector_us_table_iac"/>

      <TextView
        android:id="@+id/train_mine_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/train_my_train"
        android:textColor="@drawable/selector_bottom_table_text"
        android:textSize="12sp"/>
    </LinearLayout>

  </LinearLayout>
</LinearLayout>