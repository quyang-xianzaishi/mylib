<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/back"
            android:layout_width="22dp"
            android:layout_height="18.5dp"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/icon_back_gray"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:text="@string/system_message_title"
            android:textColor="@color/c333"
            android:textSize="18sp"
            android:id="@+id/title"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/send"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@color/white"
            android:textColor="@color/c333"
            android:text="@string/send_apply"
            android:gravity="center_vertical"
            android:textSize="14sp"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:text="@string/send_system_message_hint"
        android:gravity="center"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="8"
        android:background="@drawable/apply_training_summary_shape"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:id="@+id/send_system_message_content"
        android:hint="@string/training_summary_charcount"
        android:padding="10dp"
        android:gravity="start"
        android:textColor="@color/black"
        android:textSize="14sp"/>

</LinearLayout>