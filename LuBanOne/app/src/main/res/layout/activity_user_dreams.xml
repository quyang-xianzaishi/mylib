<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/activity_user_dreams"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  tools:context="com.example.administrator.lubanone.activity.home.UserDreamsActivity">


  <com.example.administrator.lubanone.customview.UnScrollViewPager
    android:id="@+id/view_pager"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1">

  </com.example.administrator.lubanone.customview.UnScrollViewPager>


  <TextView
    android:layout_width="match_parent"
    android:background="#CDCDCD"
    android:layout_height="1dp" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/white">


    <RelativeLayout
      android:id="@+id/rl_main_page"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:gravity="center">


      <RelativeLayout
        android:id="@+id/rl_main_page_one"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerHorizontal="true"
        android:gravity="center">

        <ImageView
          android:id="@+id/iv_all"
          android:layout_width="22dp"
          android:layout_height="22dp"
          android:layout_centerHorizontal="true" />

      </RelativeLayout>


      <TextView
        android:id="@+id/tv_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/rl_main_page_one"
        android:layout_centerHorizontal="true"
        android:text="@string/all_scale"
        android:textColor="#262E7E"
        android:textSize="12sp" />

    </RelativeLayout>

    <RelativeLayout
      android:id="@+id/rl_two"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:gravity="center">

      <RelativeLayout
        android:id="@+id/rl_two_one"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerHorizontal="true"
        android:gravity="center">

        <ImageView
          android:id="@+id/iv_dream_package"
          android:layout_width="20dp"
          android:layout_height="18dp" />

      </RelativeLayout>


      <TextView
        android:id="@+id/tv_dream_package"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/rl_two_one"
        android:layout_centerHorizontal="true"
        android:text="@string/dream_packge"
        android:textColor="#262E7E"
        android:textSize="12sp" />

    </RelativeLayout>


    <RelativeLayout
      android:id="@+id/rl_three"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:gravity="center">

      <RelativeLayout
        android:id="@+id/rl_three_one"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerHorizontal="true"
        android:gravity="center">

        <ImageView
          android:id="@+id/iv_money_package"
          android:layout_width="22dp"
          android:layout_height="22dp"
          android:layout_alignParentTop="true"
          android:layout_centerHorizontal="true" />

      </RelativeLayout>

      <TextView
        android:id="@+id/tv_money_package"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/rl_three_one"
        android:layout_centerHorizontal="true"
        android:text="@string/money_packge"
        android:textColor="#262E7E"
        android:textSize="12sp" />

    </RelativeLayout>


    <RelativeLayout
      android:id="@+id/rl_four"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:gravity="center">

      <RelativeLayout
        android:id="@+id/rl_four_one"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerHorizontal="true"
        android:gravity="center">

        <ImageView
          android:id="@+id/iv_active_code"
          android:layout_width="20dp"
          android:layout_height="19.5dp"
          android:layout_centerHorizontal="true" />

      </RelativeLayout>

      <TextView
        android:id="@+id/tv_active_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/rl_four_one"
        android:layout_centerHorizontal="true"
        android:text="@string/active_code"
        android:textColor="#262E7E"
        android:textSize="12sp" />

    </RelativeLayout>


    <RelativeLayout
      android:id="@+id/rl_five"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:gravity="center">


      <RelativeLayout
        android:id="@+id/rl_five_one"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerHorizontal="true"
        android:gravity="center">

        <ImageView
          android:id="@+id/iv_cuihuaji"
          android:layout_width="18dp"
          android:layout_height="19.5dp"
          android:layout_centerHorizontal="true" />

      </RelativeLayout>

      <TextView
        android:id="@+id/tv_cuihuaji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/rl_five_one"
        android:layout_centerHorizontal="true"
        android:text="@string/cuihuaji"
        android:textColor="#262E7E"
        android:textSize="12sp" />

    </RelativeLayout>

  </LinearLayout>
</LinearLayout>
