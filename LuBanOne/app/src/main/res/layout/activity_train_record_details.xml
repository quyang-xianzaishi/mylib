<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/cf6f6f6"
  android:orientation="vertical">
  <include layout="@layout/activity_status_bar"/>

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@color/white">

    <TextView
      android:id="@+id/task_details_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerInParent="true"
      android:text="@string/us_spread_upload_more_record"
      android:textColor="@color/black_333333"
      android:textSize="18sp"/>
    <LinearLayout
      android:id="@+id/train_record_details_back_icon"
      android:layout_width="40dp"
      android:layout_height="match_parent"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_centerVertical="true">
      <ImageView
        android:layout_width="22dp"
        android:layout_height="18.5dp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/icon_back_gray"/>
    </LinearLayout>
  </RelativeLayout>
  <View
    android:layout_width="match_parent"
    android:layout_height="10dp"
    android:background="@color/cf6f6f6"
    />
  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:background="@color/white"
    android:gravity="center_vertical">
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/train_theme"
      android:textColor="@color/gray_666666"
      android:textSize="12.5sp"/>
    <TextView
      android:id="@+id/train_record_details_theme"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="100dp"
      android:textColor="@color/gray_b6b6b6"
      android:textSize="12.5sp"/>
  </RelativeLayout>
  <View
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:layout_marginLeft="15dp"
    android:background="@color/gray_e7e7e7"
    />
  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:background="@color/white"
    android:gravity="center_vertical">
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/train_upload_time"
      android:textColor="@color/gray_666666"
      android:textSize="12.5sp"/>
    <TextView
      android:id="@+id/train_record_details_time"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="100dp"
      android:textColor="@color/gray_b6b6b6"
      android:textSize="12.5sp"/>
  </RelativeLayout>
  <View
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:layout_marginLeft="15dp"
    android:background="@color/gray_e7e7e7"
    />
  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:background="@color/white"
    android:gravity="center_vertical">
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/train_test_number"
      android:textColor="@color/gray_666666"
      android:textSize="12.5sp"/>
    <TextView
      android:id="@+id/train_record_details_number"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="100dp"
      android:textColor="@color/gray_b6b6b6"
      android:textSize="12.5sp"/>
  </RelativeLayout>
  <View
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:layout_marginLeft="15dp"
    android:background="@color/gray_e7e7e7"
    />
  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:background="@color/white"
    android:gravity="center_vertical">
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/train_upload_status"
      android:textColor="@color/gray_666666"
      android:textSize="12.5sp"/>
    <TextView
      android:id="@+id/train_record_details_status"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="100dp"
      android:textColor="@color/gray_b6b6b6"
      android:textSize="12.5sp"/>
  </RelativeLayout>

  <RelativeLayout
    android:id="@+id/train_record_details_score_layout"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:background="@color/white"
    android:visibility="gone">
    <View
      android:layout_width="match_parent"
      android:layout_height="0.5dp"
      android:layout_alignParentTop="true"
      android:background="@color/gray_e7e7e7"
      />
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:text="@string/train_success_score"
      android:textColor="@color/gray_666666"
      android:textSize="12.5sp"/>
    <TextView
      android:id="@+id/train_record_details_score"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="100dp"
      android:layout_centerVertical="true"
      android:textColor="@color/gray_b6b6b6"
      android:textSize="12.5sp"/>
  </RelativeLayout>
  <View
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:background="@color/gray_e7e7e7"
    />

</LinearLayout>