<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@drawable/icon_frame"
      android:layout_marginRight="7dp"
      android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:id="@+id/group_chat"
        android:paddingRight="14dp"
        android:paddingLeft="14dp"
        android:layout_marginTop="10dp">
        
        <ImageView
            android:layout_width="20dp"
            android:layout_height="18.5dp"
            android:src="@mipmap/icon_cjql"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/group_chat"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:textColor="@color/_888888"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/cf6f6f6"
        android:paddingRight="14dp"
        android:paddingLeft="14dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:id="@+id/add_friend"
        android:paddingRight="14dp"
        android:paddingLeft="14dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/icon_addf"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/add_friend_title"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:textColor="@color/_888888"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    </LinearLayout>
    
    

    
    
</LinearLayout>