<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#f6f6f6">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:background="@drawable/white_gray_round_shape"
    android:layout_marginBottom="20dp">

    <TextView
      android:paddingLeft="10dp"
      android:paddingRight="10dp"
      android:id="@+id/recommend_friend_list_item_title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textColor="@color/c333"
      android:textSize="12.5sp"
      android:text="@string/account"
      android:paddingTop="10dp"/>

    <TextView
      android:paddingLeft="10dp"
      android:paddingRight="10dp"
      android:id="@+id/recommend_friend_list_item_time"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textColor="#888888"
      android:textSize="11sp"
      android:text="@string/account"
      android:paddingTop="10dp"/>

    <TextView
      android:id="@+id/recommend_friend_item_content"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textColor="@color/c333"
      android:textSize="11sp"
      android:text="@string/account"
      android:paddingTop="25dp"
      android:paddingLeft="10dp"
      android:paddingRight="10dp"
      android:maxLines="5"
      android:lineSpacingExtra="5dp"/>

    <LinearLayout
      android:paddingTop="20dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:paddingLeft="10dp"
      android:paddingRight="10dp"
      android:paddingBottom="10dp">

      <TextView
        android:id="@+id/recommend_friend_item_friend_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/cEA5412"
        android:textSize="11sp"
        android:text="推荐好友："
        android:maxLines="1"
        android:layout_gravity="end"
        android:visibility="visible"/>

      <TextView
        android:id="@+id/recommend_friend_item_friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/cEA5412"
        android:textSize="11sp"
        android:text="@string/enter_custom"
        android:paddingLeft="3dp"
        android:maxLines="1"
        android:layout_gravity="end"
        android:visibility="visible"/>

    </LinearLayout>
    <TextView
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/gray_e7e7e7"/>
    <TextView
      android:paddingRight="10dp"
      android:paddingLeft="10dp"
      android:id="@+id/recommend_message_item_detail"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:paddingTop="10dp"
      android:text="@string/detail_click"
      android:textColor="@color/c333"
      android:textSize="12.5sp"
      android:visibility="visible"
      android:drawableRight="@mipmap/next_gray_2x_5"
      android:paddingBottom="10dp"/>

  </LinearLayout>

</LinearLayout>