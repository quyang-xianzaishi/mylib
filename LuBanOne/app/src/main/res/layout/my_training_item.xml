<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@color/white"
  android:orientation="vertical"
  >

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="62dp"
    android:orientation="vertical">
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:paddingLeft="15dp"
      android:paddingRight="15dp"
      android:orientation="horizontal">

      <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
          android:orientation="horizontal"
          >
          <TextView
            android:id="@+id/my_training_item_theme"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:lines="1"
            android:text="是劳动竞赛看得见"
            android:textColor="@color/black_333333"
            android:textSize="12.5sp"/>

          <TextView
            android:id="@+id/my_training_item_apply_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ddddddddddd"
            android:textColor="@color/gray_888888"
            android:textSize="11sp"
            />
        </LinearLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="5dp"
          android:gravity="center_vertical">
          <TextView
            android:id="@+id/my_training_item_training_state"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="dddd"
            android:textColor="@color/gray_888888"
            android:textSize="11sp"/>

          <TextView
            android:id="@+id/train_upload_item_notify_next_member"
            android:layout_width="85dp"
            android:layout_height="20dp"
            android:background="@drawable/orange_ea5412_bg_radius_4"
            android:gravity="center"
            android:text="@string/notify_the_next_member"
            android:textColor="@color/white"
            android:textSize="11sp"/>
          <TextView
            android:id="@+id/train_upload_item_notified_next_member"
            android:layout_width="85dp"
            android:layout_height="20dp"
            android:background="@drawable/gray_b6b6b6_bg_radius_4"
            android:gravity="center"
            android:text="@string/notified_the_next_member"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:visibility="gone"/>
        </LinearLayout>

      </LinearLayout>
      <ImageView
        android:id="@+id/my_training_item_training_notify"
        android:layout_width="8.5dp"
        android:layout_height="14dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/next_gray_2x_5"/>
    </LinearLayout>
  </LinearLayout>

</LinearLayout>