<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#f6f6f6"
  android:orientation="vertical">

  <FrameLayout
    android:id="@+id/one"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="25dp"
    android:background="@mipmap/finance_top_bg">

    <TextView
      android:layout_width="match_parent"
      android:layout_height="44dp"
      android:gravity="center"
      android:text="@string/money_packge"
      android:textColor="@color/white"
      android:textSize="18sp" />

    <ImageView
      android:id="@+id/iv_back"
      android:layout_width="22dp"
      android:layout_height="18.5dp"
      android:layout_marginLeft="15dp"
      android:layout_gravity="center_vertical"
      android:src="@mipmap/icon_back_white" />

    <TextView
      android:id="@+id/tv_back"
      android:layout_width="45dp"
      android:layout_height="30dp"
      android:layout_marginLeft="12dp"
      android:layout_gravity="center_vertical"
      android:background="@color/transparenc_all"
      android:src="@mipmap/back__white_2x" />

  </FrameLayout>

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:background="@mipmap/finance_bg"
    android:gravity="top">

    <TextView
      android:id="@+id/money_package_count"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="40dp"
      android:layout_marginBottom="4dp"
      android:layout_centerHorizontal="true"
      android:text="0.00"
      android:textColor="@color/white"
      android:textSize="50sp" />

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="0dp"
      android:layout_below="@+id/money_package_count"
      android:layout_centerHorizontal="true"
      android:text="@string/money_package_count"
      android:textColor="@color/cfff"
      android:textSize="12.5sp" />


  </RelativeLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <TextView
      android:id="@+id/tv_dream_package_seeds"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingTop="25dp"
      android:paddingBottom="24dp"
      android:paddingLeft="25dp"
      android:paddingRight="25dp"
      android:gravity="center"
      android:textColor="@color/black"
      android:textSize="13sp"
      android:visibility="gone" />

    <Button
      android:id="@+id/sell_seeds_btn"
      style="@style/home_page_btn5_style"
      android:layout_width="match_parent"
      android:layout_height="44dp"
      android:layout_marginTop="15dp"
      android:layout_marginBottom="25dp"
      android:layout_marginLeft="55dp"
      android:layout_marginRight="55dp"
      android:layout_gravity="center_horizontal"
      android:background="@mipmap/bule_new"
      android:text="@string/sell"
      android:textSize="15sp"
      android:textColor="@color/blue_white_selector" />
  </LinearLayout>


      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#f9f9f9"
        android:orientation="horizontal">

        <TextView
          android:id="@+id/tv_data_click"
          style="@style/dream_package_text_style_three"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="match_parent"
          android:text="@string/data"
          android:textColor="@color/c333"
          android:textSize="11sp" />


        <TextView
          android:id="@+id/tv_order_id_click"
          style="@style/dream_package_text_style_three"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="match_parent"
          android:text="@string/order_id"
          android:textColor="@color/c333"
          android:textSize="11sp" />

        <TextView
          android:id="@+id/tv_trade_vip_click"
          style="@style/dream_package_text_style_three"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="match_parent"
          android:text="@string/team_member_new"
          android:textColor="@color/c333"
          android:textSize="11sp" />

        <TextView
          android:id="@+id/tv_trade_type_click"
          style="@style/dream_package_text_style_three"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="match_parent"
          android:text="@string/money_type"
          android:textColor="@color/c333"
          android:textSize="11sp" />

        <TextView
          android:id="@+id/sell_seeds_count_title"
          style="@style/dream_package_text_style_three"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="match_parent"
          android:text="@string/sell_seeds_count_title"
          android:textColor="@color/c333"
          android:textSize="11sp" />


      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <com.jingchen.pulltorefresh.PullToRefreshLayout
          android:id="@+id/empty_layout"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:gravity="center"
          android:visibility="visible">
          <com.jingchen.pulltorefresh.PullableImageView
            android:id="@+id/task_fragment_no_data_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="30dp"
            android:src="@mipmap/no_date" />
        </com.jingchen.pulltorefresh.PullToRefreshLayout>


        <com.jingchen.pulltorefresh.PullToRefreshLayout
          android:id="@+id/pull"
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="1">

          <com.jingchen.pulltorefresh.PullableListView
            android:id="@+id/lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#fff"
            android:dividerHeight="1px"
            android:scrollbars="none" />

        </com.jingchen.pulltorefresh.PullToRefreshLayout>

      </LinearLayout>




</LinearLayout>