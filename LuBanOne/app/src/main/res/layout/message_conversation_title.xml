<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="44dp"
  android:paddingLeft="15dp"
  android:paddingRight="15dp"
  android:background="@color/title_background_blue"
  android:orientation="horizontal">

  <TextView
    android:id="@+id/activity_message_back"
    android:layout_width="22dp"
    android:layout_height="18.5dp"
    android:layout_marginRight="5dp"
    android:layout_gravity="center_vertical"
    android:background="@mipmap/icon_back_white"
    android:textColor="@color/white"/>


  <TextView
    android:layout_width="0dp"
    android:layout_height="44dp"
    android:layout_weight="1"
    android:background="@color/blue"
    android:gravity="center"
    android:text="@string/message_list_title"
    android:textColor="@color/white"
    android:textSize="18sp"
    android:id="@+id/activity_message_title"
    android:visibility="visible"/>

  <LinearLayout
    android:id="@+id/message_conversation_btn"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="horizontal"
    android:visibility="gone">

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:orientation="horizontal"
      android:visibility="visible">
      <TextView
        android:id="@+id/message_btn"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@drawable/gentou_title_text_border3"
        android:gravity="center"
        android:text="@string/message_list_title"
        android:textColor="@color/blue"
        android:textSize="16sp"/>

      <TextView
        android:id="@+id/conversation_btn"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@drawable/gentou_title_text_border4"
        android:gravity="center"
        android:text="@string/conversation_list_title"
        android:textColor="@color/white"
        android:textSize="16sp"/>

    </LinearLayout>

  </LinearLayout>
  <TextView
    android:id="@+id/activity_message_add"
    android:layout_width="17dp"
    android:layout_height="17dp"
    android:layout_gravity="center_vertical"
    android:background="@mipmap/add"
    android:textColor="@color/white"
    android:visibility="gone"/>
  <TextView
    android:id="@+id/activity_message_add_friend"
    android:layout_width="17dp"
    android:layout_height="17dp"
    android:layout_gravity="center_vertical"
    android:background="@mipmap/add"
    android:textColor="@color/white"
    android:visibility="gone"/>

  <TextView
    android:id="@+id/shoot_img"
    android:layout_width="15dp"
    android:layout_height="15dp"
    android:layout_gravity="center_vertical"
    android:background="@mipmap/add"
    android:textColor="@color/white"
    android:visibility="gone"/>

</LinearLayout>