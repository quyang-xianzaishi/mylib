<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:fresco="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <TextView
    android:layout_width="match_parent"
    android:layout_height="23dp"
    android:background="@color/chead" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:paddingLeft="15dp"
    android:paddingRight="25dp"
    android:background="@color/chead"
    android:orientation="horizontal">

    <TextView
      android:id="@+id/back"
      android:layout_width="22dp"
      android:layout_height="18dp"
      android:layout_gravity="center_vertical"
      android:paddingLeft="15dp"
      android:background="@mipmap/icon_back"
      android:textColor="@color/white" />

    <TextView
      android:id="@+id/title"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:background="@color/chead"
      android:gravity="center"
      android:text="@string/member_info_title"
      android:textColor="@color/white"
      android:textSize="18sp" />

  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="103dp"
      android:layout_marginTop="10dp"
      android:background="@color/white"
      android:gravity="center_vertical">


      <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_icon"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginLeft="15dp"
        fresco:actualImageScaleType="focusCrop"
        fresco:roundBottomLeft="true"
        fresco:roundBottomRight="true"
        fresco:roundTopLeft="true"
        fresco:roundTopRight="true"
        fresco:roundedCornerRadius="4dp" />


      <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_alignBottom="@+id/iv_icon"
        android:layout_alignTop="@+id/iv_icon"
        android:layout_toRightOf="@+id/iv_icon"
        android:gravity="center_vertical">


        <TextView
          android:id="@+id/tv_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:gravity="center_vertical"
          android:textColor="@color/c333"
          android:textSize="15sp" />

        <TextView
          android:id="@+id/tv_member_level"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="5dp"
          android:layout_below="@+id/tv_name"
          android:gravity="center_vertical"
          android:textColor="@color/c666"
          android:textSize="12.5sp" />


      </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="15dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:text="@string/user_assign"
        android:textColor="@color/c333"
        android:textSize="12.5sp" />

      <TextView
        android:id="@+id/tv_user_assign"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:text=" "
        android:textColor="@color/c333"
        android:textSize="12.5sp" />
    </LinearLayout>

    <Button
      android:id="@+id/btn"
      android:layout_width="match_parent"
      android:layout_height="44dp"
      android:layout_marginTop="30dp"
      android:layout_marginBottom="60dp"
      android:layout_marginLeft="55dp"
      android:layout_marginRight="55dp"
      android:background="@drawable/all_blue_shape_10"
      android:text="@string/add_good_friend"
      android:textColor="@color/white" />

  </LinearLayout>


</LinearLayout>