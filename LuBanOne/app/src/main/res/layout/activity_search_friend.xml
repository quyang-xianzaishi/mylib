<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/cf6f6f6"
  android:orientation="vertical">

  <TextView
    android:layout_width="match_parent"
    android:layout_height="25dp"
    android:background="@color/title_background_blue"/>
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:background="@color/cf6f6f6"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
      android:layout_width="0dp"
      android:layout_height="30dp"
      android:layout_weight="1"
      android:paddingLeft="10dp"
      android:paddingRight="10dp"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      android:background="@drawable/circle_rect_bg">

      <ImageView
        android:layout_width="12.5dp"
        android:layout_height="12.5dp"
        android:src="@mipmap/task_search_icon_2x"/>

      <EditText
        android:id="@+id/search_edit"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingLeft="7dp"
        android:background="@null"
        android:hint="@string/search_hint"
        android:textColor="@color/c333"
        android:textColorHint="@color/_888888"
        android:textSize="12.5sp"/>

      <ImageView
        android:id="@+id/edit_clear"
        android:layout_width="12.5dp"
        android:layout_height="12.5dp"
        android:src="@drawable/icon_close"
        android:visibility="gone"/>


    </LinearLayout>

    <TextView
      android:id="@+id/cancle"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:gravity="center_vertical"
      android:text="@string/cancels"
      android:textColor="@color/chead"
      android:textSize="15sp"
      android:layout_marginLeft="10dp"/>

  </LinearLayout>
  <TextView
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/gray_e7e7e7"/>

  <TextView
    android:id="@+id/search_no_user"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:gravity="center"
    android:text="@string/search_user_null"
    android:textColor="@color/c999"
    android:textSize="12.5sp"
    android:visibility="gone"
    android:background="@color/white"/>
  <LinearLayout
    android:id="@+id/search"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:visibility="gone">
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="55dp"
      android:background="@color/white"
      android:gravity="center_vertical"
      android:orientation="horizontal">

      <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/icon_search"/>
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text="@string/search_friend"
        android:textColor="@color/c333"
        android:textSize="12.5sp"/>
      <TextView
        android:id="@+id/search_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textColor="@color/cEA5412"
        android:textSize="12.5sp"
        android:gravity="center_vertical"/>
    </LinearLayout>
    <TextView
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_marginLeft="15dp"
      android:layout_marginRight="15dp"
      android:background="@color/cf6f6f6"/>
  </LinearLayout>

</LinearLayout>