<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@color/white"
  android:orientation="vertical">

  <TextView
    android:id="@+id/tv_order_id"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:paddingLeft="15dp"
    android:gravity="center_vertical"
    android:text="@string/order_code"
    android:textColor="@color/c333"
    android:textSize="12.5sp" />


  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:background="#F9F9F9"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
      android:id="@+id/tv_order_time"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="25dp"
      android:layout_marginRight="18dp"
      android:text=""
      android:textColor="@color/cEA5412" />

    <TextView
      android:id="@+id/tv_seeds_count"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/order_create_time1"
      android:textColor="@color/c333" />


  </LinearLayout>


  <TextView
    android:id="@+id/tv_order_status"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:paddingRight="15dp"
    android:gravity="end|center_vertical"
    android:text="@string/heji_new"
    android:textColor="@color/c333"
    android:textSize="11sp" />

  <TextView
    android:layout_width="match_parent"
    android:layout_height="1px"
    android:background="@color/transparency_light_black" />


  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:gravity="center_vertical">


    <TextView
      android:id="@+id/tv_upload_proof"
      style="@style/btn_style"
      android:layout_width="65dp"
      android:layout_height="26dp"
      android:layout_marginRight="15dp"
      android:layout_alignParentRight="true"
      android:text="@string/ping_jia" />

  </RelativeLayout>


</LinearLayout>