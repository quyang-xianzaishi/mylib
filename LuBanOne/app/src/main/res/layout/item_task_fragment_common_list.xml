<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="115dp"
    android:padding="15dp"
    android:orientation="horizontal">
    <ImageView
      android:id="@+id/task_list_item_image"
      android:layout_width="115dp"
      android:layout_height="85dp"
      android:scaleType="fitXY"
      android:src="@drawable/example"/>

    <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginLeft="10dp"
      android:paddingTop="5dp"
      android:paddingBottom="5dp"
      >
      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView
          android:id="@+id/task_list_item_title"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentTop="true"
          android:ellipsize="end"
          android:maxLines="2"
          android:text="dddddddddd"
          android:textColor="#333333"
          android:textSize="14sp"/>

        <TextView
          android:id="@+id/task_list_item_reward"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentBottom="true"
          android:text="dddddddd"
          android:textColor="#EA5412"
          android:textSize="11sp"/>
      </RelativeLayout>
      <ImageView
        android:id="@+id/task_list_item_finish_image"
        android:layout_width="55dp"
        android:layout_height="42.5dp"
        android:layout_gravity="end|bottom"
        android:src="@drawable/task_list_item_orange_finish"
        android:visibility="gone"
        />
      <ImageView
        android:id="@+id/task_list_item_reviewing_image"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_gravity="end|bottom"
        android:src="@drawable/task_list_item_reviewing"
        android:visibility="gone"
        />
    </FrameLayout>

  </LinearLayout>

</LinearLayout>