<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"

  >

  <include layout="@layout/activity_status_bar"/>

  <TextView
    style="@style/page_title"
    android:text="任务"
    />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="#C9C8CD"
    android:orientation="horizontal"
    >
    <!--本地搜索使用-->
    <!--<com.example.administrator.lubanone.customview.MySearchView-->
    <!--android:id="@+id/task_my_search_view"-->
    <!--android:layout_width="0dp"-->
    <!--android:layout_height="match_parent"-->
    <!--android:layout_marginBottom="7dp"-->
    <!--android:layout_marginLeft="12dp"-->
    <!--android:layout_marginTop="7dp"-->
    <!--android:layout_weight="1"-->
    <!--android:background="@drawable/circle_rect_bg"-->
    <!--app:SearchTextColor="#ff0000"-->
    <!--app:SearchTextSize="14sp"/>-->

    <LinearLayout
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:layout_marginTop="7dp"
      android:layout_marginBottom="7dp"
      android:layout_marginLeft="12dp"
      android:background="@drawable/circle_rect_bg"
      android:orientation="horizontal">

      <ImageView
        android:id="@+id/task_fragment_search_icon"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginLeft="5dp"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/task_search_icon_2x"/>

      <EditText
        android:id="@+id/task_fragment_search_et"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@null"
        android:ellipsize="end"
        android:hint="搜索"
        android:lines="1"
        android:textColorHint="#bbbbbb"
        android:textCursorDrawable="@drawable/edit_text_cursor_style"
        android:textSize="14sp"/>

      <ImageView
        android:id="@+id/task_fragment_search_clear"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginRight="5dp"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/task_search_clear_2x"
        android:visibility="gone"/>
    </LinearLayout>

    <ImageView
      android:id="@+id/task_fragment_collect"
      android:layout_width="44dp"
      android:layout_height="44dp"
      android:layout_gravity="center"
      android:padding="11dp"
      android:src="@drawable/selector_task_collect"/>
  </LinearLayout>
  <com.jingchen.pulltorefresh.PullToRefreshLayout
    android:id="@+id/task_fragment_no_data"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:visibility="gone"
    >
    <com.jingchen.pulltorefresh.PullableImageView
      android:id="@+id/task_fragment_no_data_image"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:padding="130dp"
      android:src="@drawable/loading_fail"/>
  </com.jingchen.pulltorefresh.PullToRefreshLayout>
  <com.jingchen.pulltorefresh.PullToRefreshLayout
    android:id="@+id/task_fragment_pullToRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    >
    <com.jingchen.pulltorefresh.PullableListView
      android:id="@+id/task_fragment_listview"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="#f0f0f2"
      android:cacheColorHint="#00000000"
      android:divider="#bbb"
      android:dividerHeight="1dp"
      android:fadingEdge="none"
      android:listSelector="#00000000"
      android:overScrollMode="never"
      android:scrollbars="none"
      />
  </com.jingchen.pulltorefresh.PullToRefreshLayout>

</LinearLayout>
