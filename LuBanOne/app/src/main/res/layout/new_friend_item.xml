<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="15dp">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/em_chat_video_normal"
        android:id="@+id/new_friend_item_apply_img"
        android:scaleType="fitXY"/>

        <LinearLayout
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="match_parent"
          android:orientation="vertical">
            <TextView
              android:id="@+id/new_friend_item_apply_name"
              android:layout_marginLeft="10dp"
              android:layout_width="match_parent"
              android:layout_height="0dp"
              android:layout_weight="1"
              android:textColor="@color/c333"
              android:textSize="12.5sp"
              android:text="@string/account"
              android:gravity="bottom"
              android:maxLines="1"
              android:ellipsize="end"
              android:paddingBottom="3dp"/>
            <TextView
              android:id="@+id/new_friend_item_apply_mess"
              android:layout_marginLeft="10dp"
              android:layout_width="match_parent"
              android:layout_height="0dp"
              android:layout_weight="1"
              android:textColor="@color/c999"
              android:textSize="11sp"
              android:text="@string/account"
              android:gravity="start"
              android:maxLines="1"
              android:ellipsize="end"
              android:paddingTop="3dp"/>

        </LinearLayout>

    <TextView
        android:layout_width="50dp"
        android:layout_height="22dp"
        android:layout_gravity="center_vertical"
        android:background="@color/blue"
        android:textSize="12.5sp"
        android:textColor="@color/white"
        android:text="@string/add_friend_btn"
        android:gravity="center"
        android:id="@+id/new_friend_item_state"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/cf6f6f6"
        android:layout_marginLeft="15dp"/>

</LinearLayout>