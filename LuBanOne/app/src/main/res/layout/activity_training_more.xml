<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <include layout="@layout/activity_order_message_title"/>
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:background="@drawable/apply_training_summary_shape"
    android:orientation="horizontal">

    <ImageView
      android:layout_width="20dp"
      android:layout_height="20dp"
      android:layout_marginLeft="5dp"
      android:layout_gravity="center"
      android:src="@mipmap/task_search_icon_2x"/>

    <EditText
      android:id="@+id/search_edittext"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:paddingLeft="5dp"
      android:background="@null"
      android:hint="@string/search_hint"
      android:textSize="14sp"/>
  </LinearLayout>

  <com.jingchen.pulltorefresh.PullToRefreshLayout
    android:id="@+id/training_more_refresh"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1">

    <com.jingchen.pulltorefresh.PullableListView
      android:id="@+id/training_more_list"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="#f0f0f2"
      android:cacheColorHint="#00000000"
      android:divider="#bbb"
      android:dividerHeight="0dp"
      android:fadingEdge="none"
      android:listSelector="#00000000"
      android:overScrollMode="never"
      android:scrollbars="none"/>

  </com.jingchen.pulltorefresh.PullToRefreshLayout>


</LinearLayout>