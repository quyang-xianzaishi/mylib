<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@color/cf6f6f6"
  android:orientation="vertical">

  <TextView
    android:layout_width="match_parent"
    android:layout_height="25dp"
    android:background="@color/title_background_blue"/>

  <RelativeLayout
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginBottom="10dp">

    <TextView
      android:id="@+id/tv_title"
      android:layout_width="match_parent"
      android:layout_height="44dp"
      android:gravity="center"
      android:textColor="@color/c333"
      android:textSize="18sp"
      android:text="@string/sell_seeds_record_details"/>

    <ImageView
      android:id="@+id/iv_back"
      android:layout_width="22dp"
      android:layout_height="18.5dp"
      android:layout_marginLeft="15dp"
      android:layout_centerVertical="true"
      android:src="@mipmap/icon_back_gray"/>

  </RelativeLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="77dp"
      android:orientation="horizontal"
      android:paddingRight="15dp">

      <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:text="@string/sell_seeds_record_item_title"
        android:gravity="center_vertical"
        android:textSize="12.5sp"
        android:textColor="@color/c333"/>

      <TextView
        android:id="@+id/sell_seeds_count"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text=""
        android:gravity="center_vertical"
        android:textSize="25sp"
        android:textColor="@color/c333"/>

    </LinearLayout>
    
    <TextView
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/cf6f6f6"
      android:layout_marginLeft="0dp"/>


    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="40dp"
      android:orientation="horizontal"
      android:paddingRight="15dp">

      <TextView
        style="@style/home_page_lv_item_sty"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/order_id"
        android:textColor="@color/_888888"
        android:textSize="11sp"/>

      <TextView
        android:id="@+id/order_id"
        style="@style/home_page_lv_item_sty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/_888888"
        android:textSize="11sp"
        android:gravity="end"/>
    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="40dp"
      android:orientation="horizontal"
      android:paddingRight="15dp">

      <TextView
        style="@style/home_page_lv_item_sty"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/seed_count2"
        android:textColor="@color/_888888"
        android:textSize="11sp"/>

      <TextView
        android:id="@+id/order_count"
        style="@style/home_page_lv_item_sty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text=""
        android:textColor="@color/_888888"
        android:textSize="11sp"
        android:gravity="end"/>
    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="40dp"
      android:orientation="horizontal"
      android:paddingRight="15dp">

      <TextView
        style="@style/home_page_lv_item_sty"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/complete_time2"
        android:textColor="@color/_888888"
        android:textSize="11sp"/>

      <TextView
        android:id="@+id/order_time"
        style="@style/home_page_lv_item_sty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text=""
        android:textColor="@color/_888888"
        android:textSize="11sp"
        android:gravity="end"/>
    </LinearLayout>
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="40dp"
      android:orientation="horizontal"
      android:paddingRight="15dp">

      <TextView
        style="@style/home_page_lv_item_sty"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/buy_vip2"
        android:textColor="@color/_888888"
        android:textSize="11sp"/>

      <TextView
        android:id="@+id/order_member"
        style="@style/home_page_lv_item_sty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text=""
        android:textColor="@color/_888888"
        android:textSize="11sp"
        android:gravity="end"/>
    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="40dp"
      android:orientation="horizontal"
      android:paddingRight="15dp">

      <TextView
        style="@style/home_page_lv_item_sty"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/discuss_credit2"
        android:textColor="@color/_888888"
        android:textSize="11sp"/>

      <TextView
        android:id="@+id/order_score"
        style="@style/home_page_lv_item_sty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text=""
        android:textColor="@color/_888888"
        android:textSize="11sp"
        android:gravity="end"/>
    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="40dp"
      android:orientation="horizontal"
      android:paddingRight="15dp">

      <TextView
        style="@style/home_page_lv_item_sty"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/order_status2"
        android:textColor="@color/_888888"
        android:textSize="11sp"/>

      <TextView
        android:id="@+id/order_state"
        style="@style/home_page_lv_item_sty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text=""
        android:textColor="@color/_888888"
        android:textSize="11sp"
        android:gravity="end"/>
    </LinearLayout>
  </LinearLayout>

</LinearLayout>
