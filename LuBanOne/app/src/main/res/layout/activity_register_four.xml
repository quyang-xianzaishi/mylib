<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/activity_register"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/cf6f6f6"
  android:orientation="vertical">


  <TextView
    android:layout_width="match_parent"
    android:layout_height="23dp"
    android:background="@color/chead" />

  <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:visibility="visible">

    <TextView
      android:layout_width="match_parent"
      android:layout_height="44dp"
      android:gravity="center"
      android:text="@string/bind_bank_account"
      android:textColor="#000"
      android:textSize="17sp" />

    <ImageView
      android:id="@+id/iv_back"
      android:layout_width="22dp"
      android:layout_height="18dp"
      android:visibility="gone"
      android:layout_marginLeft="15dp"
      android:layout_gravity="center_vertical"
      android:src="@mipmap/icon_back_gray" />

    <TextView
      android:id="@+id/tv_back"
      android:layout_width="40dp"
      android:layout_height="24dp"
      android:layout_marginLeft="12dp"
      android:layout_gravity="center_vertical"
      android:background="@color/transparenc_all"
      android:visibility="gone" />

  </FrameLayout>
  <TextView
    android:layout_width="match_parent"
    android:layout_height="1px"
    android:background="#bbb" />


  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingTop="50dp"
      android:visibility="gone">

      <ImageView
        android:id="@+id/icon"
        android:layout_width="226dp"
        android:layout_height="58dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/lpho_2x" />

    </RelativeLayout>


    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:layout_marginTop="10dp"
      android:orientation="vertical">


      <LinearLayout
        android:id="@+id/ll_user_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
          android:id="@+id/textView3"
          style="@style/land_text_sty"
          android:layout_width="80dp"
          android:layout_height="match_parent"
          android:text="@string/card_ownner"
          android:textColor="@color/c333"
          android:textSize="12.5sp" />


        <TextView
          android:id="@+id/user_name_input"
          style="@style/land_et_sty"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="3"
          android:textColor="@color/c333" />

      </LinearLayout>


      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal">
        <TextView
          android:layout_width="15dp"
          android:layout_height="match_parent"
          android:background="@color/white" />

        <TextView
          android:id="@+id/line"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="@color/cf6f6f6" />

      </LinearLayout>


      <LinearLayout
        android:id="@+id/ll_pwd"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="15dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
          style="@style/land_text_sty"
          android:layout_width="80dp"
          android:layout_height="match_parent"
          android:gravity="center_vertical"
          android:text="@string/bank_name"
          android:textColor="@color/c333"
          android:textSize="12.5sp" />

        <TextView
          android:id="@+id/user_pwd_input"
          style="@style/land_et_sty"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="3"
          android:paddingRight="15dp"
          android:background="@null"
          android:drawableRight="@mipmap/next_gray_2x_5"
          android:gravity="center_vertical"
          android:hint="@string/please_choose_bank"
          android:textColor="@color/c333"
          android:textColorHint="@color/c999"
          android:textSize="12.5sp" />

      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal">
        <TextView
          android:layout_width="15dp"
          android:layout_height="match_parent"
          android:background="@color/white" />

        <TextView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="@color/cf6f6f6" />

      </LinearLayout>


      <LinearLayout
        android:id="@+id/ll_check_code"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="15dp"
        android:background="@color/white"
        android:orientation="horizontal">


        <TextView
          style="@style/land_text_sty"
          android:layout_width="80dp"
          android:layout_height="match_parent"
          android:text="@string/car_code" />


        <EditText
          android:id="@+id/user_check_code_input"
          style="@style/land_et_sty"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="3"
          android:background="@null"
          android:hint="@string/input_card_number"
          android:textColor="@color/c333"
          android:textColorHint="@color/c999"
          android:inputType="number" />

      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal">
        <TextView
          android:layout_width="15dp"
          android:layout_height="match_parent"
          android:background="@color/white" />

        <TextView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="@color/cf6f6f6" />

      </LinearLayout>

      <LinearLayout
        android:id="@+id/ll_phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="15dp"
        android:background="@color/white"
        android:orientation="horizontal">


        <TextView
          style="@style/land_text_sty"
          android:layout_width="80dp"
          android:layout_height="match_parent"
          android:text="@string/bank_code" />

        <EditText
          android:id="@+id/user_phone_input"
          style="@style/land_et_sty"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="3"
          android:textColor="@color/c333"
          android:textColorHint="@color/c999"
          android:background="@null"
          android:hint="@string/input_bank_code" />

      </LinearLayout>

      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="15dp">

        <ImageView
          android:id="@+id/iv_waring"
          android:layout_width="15dp"
          android:layout_height="13dp"
          android:layout_marginRight="10dp"
          android:src="@mipmap/warming" />

        <TextView
          android:id="@+id/tv_tips"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="19dp"
          android:layout_marginRight="40dp"
          android:lineSpacingMultiplier="1.2"
          android:layout_toRightOf="@+id/iv_waring"
          android:text="@string/complete_tips"
          android:textColor="@color/_888888"
          android:textSize="11sp" />

      </RelativeLayout>


      <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="86dp"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/all_blue_shape_10"
        android:text="@string/btn_next"
        android:textColor="@color/white"
        android:textSize="18sp" />

    </LinearLayout>
  </LinearLayout>


</LinearLayout>
