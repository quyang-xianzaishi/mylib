<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#f0f0f2"
  android:orientation="vertical"
  tools:context="com.example.administrator.lubanone.activity.home.CardDetailsActivity">

  <TextView
    android:layout_width="match_parent"
    android:layout_height="23dp"
    android:background="@color/chead" />

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
      android:id="@+id/title"
      android:layout_width="match_parent"
      android:layout_height="44dp"
      android:gravity="center"
      android:text="@string/account_details"
      android:textColor="@color/c333"
      android:textSize="17sp" />


    <ImageView
      android:id="@+id/back"
      android:layout_width="22dp"
      android:layout_height="18dp"
      android:layout_marginLeft="12dp"
      android:layout_alignParentLeft="true"
      android:layout_centerVertical="true"
      android:gravity="center"
      android:src="@mipmap/icon_back_gray" />


    <TextView
      android:id="@+id/tv_back"
      android:layout_width="40dp"
      android:layout_height="30dp"
      android:layout_centerVertical="true"
      android:background="@color/transparenc_all" />


  </RelativeLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginTop="10dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <TextView
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:paddingLeft="15dp"
      android:gravity="center_vertical"
      android:text="@string/card_ownner"
      android:textColor="@color/c333"
      android:textSize="12.5sp" />

    <TextView
      android:id="@+id/person"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="3"
      android:gravity="center_vertical"
      android:textColor="@color/c333"
      android:textSize="12.5sp" />


  </LinearLayout>
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white">
    <TextView
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/cf6f6f6"
      android:layout_marginLeft="15dp"/>
  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <TextView
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:paddingLeft="15dp"
      android:gravity="center_vertical"
      android:text="@string/bank_name"
      android:textColor="@color/c333"
      android:textSize="12.5sp" />

    <TextView
      android:id="@+id/tv_bank_name"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="3"
      android:gravity="center_vertical"
      android:textColor="@color/c333"
      android:textSize="12.5sp" />


  </LinearLayout>
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white">
    <TextView
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/cf6f6f6"
      android:layout_marginLeft="15dp"/>
  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <TextView
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:paddingLeft="15dp"
      android:gravity="center_vertical"
      android:text="@string/bank_account"
      android:textColor="@color/c333"
      android:textSize="12.5sp" />

    <TextView
      android:id="@+id/tv_bank_account"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="3"
      android:gravity="center_vertical"
      android:textColor="@color/c333"
      android:textSize="12.5sp" />


  </LinearLayout>
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white">
    <TextView
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/cf6f6f6"
      android:layout_marginLeft="15dp"/>
  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <TextView
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:paddingLeft="15dp"
      android:gravity="center_vertical"
      android:text="@string/bank_code"
      android:textColor="@color/c333"
      android:textSize="12.5sp" />

    <TextView
      android:id="@+id/bank_code"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="3"
      android:gravity="center_vertical"
      android:textColor="@color/c333"
      android:textSize="12.5sp" />

  </LinearLayout>
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white">
    <TextView
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/cf6f6f6"
      android:layout_marginLeft="15dp"/>
  </LinearLayout>

  <Button
    android:id="@+id/delete"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:layout_marginTop="30dp"
    android:layout_marginLeft="55dp"
    android:layout_marginRight="55dp"
    android:background="@drawable/all_blue_shape_10"
    android:text="@string/delete"
    android:textColor="@color/white" />

</LinearLayout>
