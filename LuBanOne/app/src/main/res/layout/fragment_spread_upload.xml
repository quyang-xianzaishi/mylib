<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/white"
  android:orientation="vertical">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:paddingTop="35dp"
    android:paddingStart="33dp"
    android:paddingEnd="27dp"
    android:paddingLeft="33dp"
    android:paddingRight="27dp"
    android:background="@color/white"
    android:orientation="horizontal">
    <LinearLayout
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:orientation="vertical">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/us_spread_upload"
        android:textColor="@color/black_333333"
        android:textSize="16sp"
        />

      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/us_spread_upload1"
          android:textColor="@color/gray_666666"
          android:textSize="12sp"/>
        <TextView
          android:textStyle="bold"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/us_spread_upload2"
          android:textColor="@color/orange_ea5412"
          android:textSize="12sp"/>
        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/us_spread_upload3"
          android:textColor="@color/gray_666666"
          android:textSize="12sp"/>
      </LinearLayout>

      <TextView
        android:id="@+id/us_spread_upload_rl"
        android:layout_width="63dp"
        android:layout_height="22dp"
        android:layout_marginTop="28dp"
        android:background="@color/title_background_blue"
        android:gravity="center"
        android:text="@string/us_spread_want_upload_btn"
        android:textColor="@color/white"
        android:textSize="12sp"
        />
    </LinearLayout>
    <ImageView
      android:layout_width="105dp"
      android:layout_height="115dp"
      android:src="@drawable/us_spread_upload"
      />
  </LinearLayout>

  <View
    android:layout_width="match_parent"
    android:layout_height="10dp"
    android:background="@color/cf6f6f6"/>
  <RelativeLayout
    android:id="@+id/us_spread_upload_record_rl"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:paddingLeft="15dp"
    android:background="@color/white"
    >

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_centerVertical="true"
      android:text="@string/us_spread_upload_record"
      android:textColor="@color/black_333333"
      android:textSize="12.5dp"
      />

    <RelativeLayout
      android:id="@+id/us_spread_upload_more_btn"
      android:layout_width="50dp"
      android:layout_height="match_parent"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:layout_centerVertical="true"
      >
      <ImageView
        android:id="@+id/us_spread_upload_record_img"
        android:layout_width="15dp"
        android:layout_height="3dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/icon_more_76"/>
    </RelativeLayout>
  </RelativeLayout>

  <View
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:background="@color/gray_e7e7e7"/>
  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    >
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">
      <com.example.administrator.lubanone.customview.ScollListView
        android:id="@+id/us_spread_upload_record_list_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:divider="@drawable/task_list_view_divider"
        android:dividerHeight="0.5dp"
        android:scrollbars="none"
        />
      <TextView
        android:id="@+id/us_spread_upload_look_more"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/cf6f6f6"
        android:gravity="center"
        android:text="@string/more_datas"
        android:textColor="@color/gray_999999"
        android:textSize="11sp"
        android:visibility="gone"/>
    </LinearLayout>
  </ScrollView>
</LinearLayout>