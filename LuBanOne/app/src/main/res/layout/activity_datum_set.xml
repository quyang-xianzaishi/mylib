<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f6"
    android:scrollbars="vertical">

    <TextView
      android:layout_width="match_parent"
      android:layout_height="25dp"
      android:background="@color/title_background_blue"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/title_background_blue"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="37dp">

        <TextView
            android:id="@+id/back"
            android:layout_width="22dp"
            android:layout_height="18.5dp"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/icon_back_white"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:background="@color/title_background_blue"
            android:gravity="center"
            android:text="@string/datum_set_title"
            android:textColor="@color/white"
            android:textSize="18sp"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <LinearLayout
        android:id="@+id/reward_set"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="15dp"
        android:background="@color/white"
        android:layout_marginTop="15dp"
        android:visibility="gone">
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="@string/remark_set"
        android:textColor="@color/black"
        android:textSize="14sp"/>

        <TextView
            android:layout_width="10dp"
            android:layout_height="15dp"
            android:background="@mipmap/detail_img"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/recommend_friend"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/recommend_friend"
            android:textColor="@color/c333"
            android:textSize="12.5sp"/>

        <TextView
            android:layout_width="8.5dp"
            android:layout_height="14dp"
            android:background="@mipmap/next_gray_2x_5"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/set_identification_friend"
            android:textColor="@color/c333"
            android:textSize="12.5sp"
            android:layout_gravity="center"/>

        <com.example.administrator.lubanone.customview.ToggleButtonView.ToggleButton
            android:id="@+id/set_identification_friend"
            android:layout_width="51dp"
            android:layout_height="31dp"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="12dp"
        android:background="@color/white"
        android:layout_marginTop="15dp"
      android:visibility="gone">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/shield_my_moments"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_gravity="center"/>

        <com.example.administrator.lubanone.customview.ToggleButtonView.ToggleButton
            android:id="@+id/shield_my_moments"
            android:layout_width="54dp"
            android:layout_height="30dp"
            android:layout_gravity="center"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#bbb"
      android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="12dp"
        android:background="@color/white"
      android:visibility="gone">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/shield_his_moments"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_gravity="center"/>

        <com.example.administrator.lubanone.customview.ToggleButtonView.ToggleButton
            android:id="@+id/shield_his_moments"
            android:layout_width="54dp"
            android:layout_height="30dp"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/join_blacklist"
            android:textColor="@color/c333"
            android:textSize="12.5sp"
            android:layout_gravity="center"/>

        <com.example.administrator.lubanone.customview.ToggleButtonView.ToggleButton
            android:id="@+id/join_blacklist"
            android:layout_width="51dp"
            android:layout_height="31dp"
            android:layout_gravity="center"/>
    </LinearLayout>

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">
            <TextView
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:layout_marginLeft="15dp"
              android:background="@color/cf6f6f6"
              android:visibility="visible"/>
          </LinearLayout>

    <LinearLayout
        android:id="@+id/complain"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/white"
        android:layout_marginTop="0dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/complain"
            android:textColor="@color/c333"
            android:textSize="12.5sp"/>

        <TextView
            android:layout_width="8.5dp"
            android:layout_height="14dp"
            android:background="@mipmap/next_gray_2x_5"
            android:layout_gravity="center"/>
    </LinearLayout>

    <TextView
        android:id="@+id/detele_friend"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/blue_white_round_selector"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:text="@string/detele_friend"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"/>
        </LinearLayout>
    </ScrollView>



</LinearLayout>