<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="62dp"
  android:paddingTop="15dp"
  android:background="@color/white"
  android:gravity="center_vertical">

  <TextView
    android:id="@+id/tv_buy_seed_time"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:text="@string/buy"
    android:textSize="12.5sp"
    android:textColor="@color/c333" />

  <TextView
    android:id="@+id/tv_buy_time"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_below="@+id/tv_buy_seed_time"
    android:paddingLeft="15dp"
    android:textSize="11sp"
    android:textColor="#888888" />


  <TextView
    android:id="@+id/tv_right"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingRight="15dp"
    android:drawablePadding="5dp"
    android:textSize="11sp"
    android:drawableRight="@mipmap/next_gray_2x_5"
    android:gravity="end"
    android:textColor="@color/c333"
    android:lineSpacingMultiplier="1.2"
    android:text=""
    android:layout_alignParentTop="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true" />


  <TextView
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="15dp"
    android:layout_below="@+id/tv_buy_time"
    android:background="@color/cf6f6f6" />


</RelativeLayout>