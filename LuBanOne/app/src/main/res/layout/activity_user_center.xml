<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/activity_user_center"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  tools:context="com.example.administrator.lubanone.activity.home.UserCenterActivity">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="25dp"
    android:background="@color/title_background_blue"
    android:orientation="horizontal">

    <TextView
      android:id="@+id/tv_back"
      android:layout_width="22dp"
      android:layout_height="18dp"
      android:layout_marginLeft="13dp"
      android:layout_gravity="center_vertical"
      android:drawableLeft="@mipmap/icon_back_white" />


    <TextView
      android:layout_width="0dp"
      android:layout_height="44dp"
      android:layout_weight="1"
      android:gravity="center"
      android:text="@string/user_center"
      android:textColor="@color/white"
      android:textSize="18sp" />


    <ImageView
      android:id="@+id/tv_input_edit"
      android:layout_width="24dp"
      android:layout_height="24dp"
      android:layout_marginRight="15dp"
      android:layout_gravity="center_vertical"
      android:src="@mipmap/icon_set" />

  </LinearLayout>

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingBottom="70dp"
      android:orientation="vertical">

      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:background="@color/white"
        android:gravity="top">

        <ImageView
          android:id="@+id/icon"
          android:layout_width="75dp"
          android:layout_height="75dp"
          android:layout_marginTop="35dp"
          android:layout_centerHorizontal="true"
          android:src="@mipmap/pho_photos" />

        <TextView
          android:id="@+id/tv_user_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
          android:layout_below="@+id/icon"
          android:layout_centerHorizontal="true"
          android:gravity="center"
          android:text=""
          android:textColor="@color/c333"
          android:textSize="15sp" />

        <TextView
          android:id="@+id/self_introduce"
          android:layout_width="200dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:layout_below="@+id/tv_user_name"
          android:layout_centerHorizontal="true"
          android:ellipsize="end"
          android:gravity="center"
          android:maxLines="1"
          android:text=""
          android:textColor="@color/_888888"
          android:textSize="11sp" />


      </RelativeLayout>


      <LinearLayout
        android:id="@+id/rl_vip_level"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
          android:id="@+id/fl_container"
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:layout_marginLeft="15dp"
          android:gravity="center">

          <ImageView
            android:id="@+id/iv_one"
            android:layout_width="18dp"
            android:layout_height="21dp"
            android:src="@mipmap/icon_member_one" />

        </RelativeLayout>

        <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent">

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/vip_level"
            android:textColor="@color/c333"
            android:textSize="13sp" />

          <TextView
            android:id="@+id/tv_level"
            android:layout_width="35dp"
            android:layout_height="22dp"
            android:layout_marginRight="3dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_next_page_grade"
            android:background="@drawable/new_red_line_shaope"
            android:gravity="center"
            android:text="0.00"
            android:textColor="@color/cEA5412"
            android:textSize="11sp" />


          <ImageView
            android:id="@+id/iv_next_page_grade"
            android:layout_width="8dp"
            android:layout_height="14dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/next_gray_2x_5" />

        </RelativeLayout>


      </LinearLayout>

      <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:background="@color/cf6f6f6" />


      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:layout_marginLeft="15dp"
          android:gravity="center">

          <ImageView
            android:id="@+id/iv_icon_two"
            android:layout_width="20.5dp"
            android:layout_height="16dp"
            android:src="@mipmap/icon_integral" />

        </RelativeLayout>

        <RelativeLayout
          android:id="@+id/rl_two"
          android:layout_width="match_parent"
          android:layout_height="match_parent">

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/train_credit"
            android:textColor="@color/c333"
            android:textSize="13sp" />

          <TextView
            android:id="@+id/tv_train_credits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_next_page_grade_two"
            android:gravity="center"
            android:text=""
            android:textColor="@color/_888888"
            android:textSize="11sp" />


          <ImageView
            android:id="@+id/iv_next_page_grade_two"
            android:layout_width="8dp"
            android:layout_height="14dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/next_gray_2x_5" />

        </RelativeLayout>


      </LinearLayout>


      <TextView
        android:id="@+id/into"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_alignParentBottom="true"
        android:background="@color/cf6f6f6" />


      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:layout_marginLeft="15dp"
          android:gravity="center">

          <ImageView
            android:id="@+id/iv_icon_three"
            android:layout_width="20dp"
            android:layout_height="18dp"
            android:src="@mipmap/icon_credit" />

        </RelativeLayout>

        <RelativeLayout
          android:id="@+id/rl_three"
          android:layout_width="match_parent"
          android:layout_height="match_parent">

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/credit_grade"
            android:textColor="@color/c333"
            android:textSize="13sp" />

          <TextView
          android:id="@+id/tv_xiong_credits"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginRight="3dp"
          android:layout_centerVertical="true"
          android:layout_toLeftOf="@+id/iv_next_page_grade_three"
          android:gravity="center"
          android:text=""
          android:textColor="@color/_888888"
          android:textSize="11sp" />


          <ImageView
            android:id="@+id/iv_next_page_grade_three"
            android:layout_width="8dp"
            android:layout_height="14dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/next_gray_2x_5" />

        </RelativeLayout>


      </LinearLayout>


      <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:background="@color/cf6f6f6" />


      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:layout_marginLeft="15dp"
          android:gravity="center">

          <ImageView
            android:id="@+id/iv_icon_four"
            android:layout_width="18dp"
            android:layout_height="19.5dp"
            android:src="@mipmap/icon_chj" />

        </RelativeLayout>

        <RelativeLayout
          android:id="@+id/rl_four"
          android:layout_width="match_parent"
          android:layout_height="match_parent">

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/cuihuaji"
            android:textColor="@color/c333"
            android:textSize="13sp" />

          <TextView
            android:id="@+id/tv_cuihuaji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_next_page_grade_four"
            android:gravity="center"
            android:text=""
            android:textColor="@color/_888888"
            android:textSize="11sp" />


          <ImageView
            android:id="@+id/iv_next_page_grade_four"
            android:layout_width="8dp"
            android:layout_height="14dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/next_gray_2x_5" />

        </RelativeLayout>


      </LinearLayout>

      <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:background="@color/cf6f6f6" />


      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:layout_marginLeft="15dp"
          android:gravity="center">

          <ImageView
            android:id="@+id/iv_icon_five"
            android:layout_width="18dp"
            android:layout_height="17dp"
            android:src="@mipmap/icon_dream" />

        </RelativeLayout>

        <RelativeLayout
          android:id="@+id/rl_five"
          android:layout_width="match_parent"
          android:layout_height="match_parent">

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/dream_packge"
            android:textColor="@color/c333"
            android:textSize="13sp" />


          <TextView
            android:id="@+id/tv_dream_package"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_next_page_grade_five"
            android:gravity="center"
            android:text=""
            android:textColor="@color/_888888"
            android:textSize="11sp" />


          <ImageView
            android:id="@+id/iv_next_page_grade_five"
            android:layout_width="8dp"
            android:layout_height="14dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/next_gray_2x_5" />

        </RelativeLayout>


      </LinearLayout>


      <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:background="@color/cf6f6f6" />


      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:layout_marginLeft="15dp"
          android:gravity="center">

          <ImageView
            android:layout_width="17dp"
            android:layout_height="17.5dp"
            android:src="@mipmap/icon_bonus" />

        </RelativeLayout>

        <RelativeLayout
          android:id="@+id/rl_six"
          android:layout_width="match_parent"
          android:layout_height="match_parent">

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/money_packge"
            android:textColor="@color/c333"
            android:textSize="13sp" />


          <TextView
            android:id="@+id/tv_money_package"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_next_page_grade_six"
            android:gravity="center"
            android:text=""
            android:textColor="@color/_888888"
            android:textSize="11sp" />

          <ImageView
            android:id="@+id/iv_next_page_grade_six"
            android:layout_width="8dp"
            android:layout_height="14dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/next_gray_2x_5" />

        </RelativeLayout>


      </LinearLayout>

      <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:background="@color/cf6f6f6" />

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:layout_marginLeft="15dp"
          android:gravity="center">

          <ImageView
            android:layout_width="18dp"
            android:layout_height="117.5dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/icon_code" />

        </RelativeLayout>

        <RelativeLayout
          android:id="@+id/rl_seven"
          android:layout_width="match_parent"
          android:layout_height="match_parent">

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/active_code"
            android:textColor="@color/c333"
            android:textSize="13sp" />



          <TextView
            android:id="@+id/tv_active_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_next_page_grade_seven"
            android:gravity="center"
            android:text=""
            android:textColor="@color/_888888"
            android:textSize="11sp" />

          <ImageView
            android:id="@+id/iv_next_page_grade_seven"
            android:layout_width="8dp"
            android:layout_height="14dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/next_gray_2x_5" />

        </RelativeLayout>


      </LinearLayout>


      <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:background="@color/cf6f6f6" />

    </LinearLayout>
  </ScrollView>

</LinearLayout>
