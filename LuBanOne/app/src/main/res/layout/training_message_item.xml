<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#f6f6f6"
  android:orientation="vertical">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:background="@drawable/white_gray_round_shape"
    android:orientation="vertical">

    <TextView
      android:id="@+id/train_message_item_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:paddingTop="10dp"
      android:paddingRight="10dp"
      android:paddingLeft="10dp"
      android:text="@string/account"
      android:textColor="@color/c333"
      android:textSize="12.5sp"/>

    <TextView
      android:id="@+id/train_message_item_time"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:paddingTop="10dp"
      android:paddingRight="10dp"
      android:paddingLeft="10dp"
      android:text="@string/account"
      android:textColor="#888888"
      android:textSize="11sp"/>

    <TextView
      android:id="@+id/train_message_item_content"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:maxLines="5"
      android:paddingTop="25dp"
      android:paddingRight="10dp"
      android:paddingLeft="10dp"
      android:text="@string/account"
      android:textColor="@color/c333"
      android:textSize="11sp"
      android:lineSpacingExtra="5dp"/>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:paddingTop="20dp"
      android:paddingRight="10dp"
      android:paddingLeft="10dp">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#888888"
        android:textSize="11sp"
        android:text="@string/training_theme"/>
    <TextView
      android:id="@+id/train_message_item_traintheme"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="#888888"
      android:textSize="11sp"/>

    </LinearLayout>
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:paddingTop="10dp"
      android:paddingRight="10dp"
      android:paddingLeft="10dp">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#888888"
        android:textSize="11sp"
        android:text="@string/train_upload_time1"/>
    <TextView
      android:id="@+id/train_message_item_uploadtime"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="#888888"
      android:textSize="11sp"/>
      </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:paddingTop="10dp"
      android:paddingRight="10dp"
      android:paddingLeft="10dp"
      android:paddingBottom="10dp">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#888888"
        android:textSize="11sp"
        android:text="@string/obtain_jifen"/>
    <TextView
      android:id="@+id/train_message_item_obtainintegration"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="#888888"
      android:textSize="11sp"/>
      </LinearLayout>
    <TextView
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/gray_e7e7e7"/>

    <TextView
      android:paddingRight="10dp"
      android:paddingLeft="10dp"
      android:id="@+id/train_message_item_click"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:paddingTop="10dp"
      android:text=""
      android:textColor="@color/c333"
      android:textSize="12.5sp"
      android:visibility="visible"
      android:drawableRight="@mipmap/next_gray_2x_5"
      android:paddingBottom="10dp"/>
  </LinearLayout>


</LinearLayout>