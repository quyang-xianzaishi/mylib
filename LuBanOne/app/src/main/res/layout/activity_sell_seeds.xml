<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/activity_buy_seeds"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  tools:context="com.example.administrator.lubanone.activity.home.BuySeedsActivity">

  <TextView
    android:layout_width="match_parent"
    android:layout_height="25dp"
    android:background="#1D2C8D" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:paddingBottom="5dp"
    android:background="#1D2C8D"
    android:gravity="center_vertical">


    <ImageView
      android:id="@+id/iv_back_click"
      android:layout_width="22dp"
      android:layout_height="18dp"
      android:layout_marginLeft="15dp"
      android:layout_centerVertical="true"
      android:src="@mipmap/icon_back" />


    <TextView
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:layout_marginRight="37dp"
      android:gravity="center"
      android:text="@string/sell"
      android:textColor="@color/white"
      android:textSize="18sp" />

    <TextView
      android:id="@+id/tv_back"
      android:layout_width="30dp"
      android:layout_height="24dp"
      android:layout_centerVertical="true"
      android:src="@mipmap/back__white_2x"
      android:visibility="gone" />

  </LinearLayout>

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">


      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:background="@mipmap/sell_bg"
        android:orientation="horizontal">

        <RelativeLayout
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:layout_gravity="center"
          android:gravity="top">

          <TextView
            android:id="@+id/tv_dream_package"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="@string/dream_backage_pcs"
            android:textColor="@color/white"
            android:textSize="11sp" />


          <TextView
            android:id="@+id/tv_dream_package_seeds_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/tv_dream_package"
            android:layout_centerHorizontal="true"
            android:text=""
            android:textColor="@color/white"
            android:textSize="25sp" />

        </RelativeLayout>


        <TextView
          android:layout_width="1dp"
          android:layout_height="27dp"
          android:layout_gravity="center_vertical"
          android:alpha="0.2"
          android:background="@color/white" />


        <RelativeLayout
          android:id="@+id/rl_money_package"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:layout_gravity="center"
          android:gravity="top">

          <TextView
            android:id="@+id/tv_money_package"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_centerHorizontal="true"
            android:text="@string/money_packge_new"
            android:textColor="@color/white"
            android:textSize="11sp" />


          <TextView
            android:id="@+id/tv_money_package_seeds_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/tv_money_package"
            android:layout_centerHorizontal="true"
            android:text=""
            android:textColor="@color/white"
            android:textSize="25sp" />

        </RelativeLayout>
      </LinearLayout>

      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/white">

        <TextView
          android:id="@+id/tv_buy_seed_from"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:layout_marginBottom="12dp"
          android:layout_marginLeft="15dp"
          android:text="@string/sell"
          android:textColor="@color/c333"
          android:textSize="13sp" />

        <TextView
          android:id="@+id/tv_select_to_sell"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/tv_buy_seed_from"
          android:paddingLeft="15dp"
          android:paddingRight="15dp"
          android:background="@null"
          android:drawableRight="@mipmap/next_gray_2x_5"
          android:gravity="center_vertical"
          android:hint="@string/please_package_type"
          android:textColor="@color/c333"
          android:textColorHint="@color/c999"
          android:textSize="13sp" />

      </RelativeLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal">
        <TextView
          android:layout_width="15dp"
          android:layout_height="1dp"
          android:background="@color/white" />

        <TextView
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@color/cf6f6f6" />
      </LinearLayout>


      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/white">

        <TextView
          android:id="@+id/tv_buy_seed"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:layout_marginBottom="10dp"
          android:layout_marginLeft="15dp"
          android:text="@string/sell_seeds_count"
          android:textColor="@color/c333"
          android:textSize="13sp" />

        <EditText
          android:id="@+id/et_to_sell"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/tv_buy_seed"
          android:paddingLeft="15dp"
          android:background="@null"
          android:hint="@string/please_input_seeds_count"
          android:inputType="number"
          android:textColor="@color/c333"
          android:textColorHint="@color/c999"
          android:textSize="13sp" />


      </RelativeLayout>


      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal">
        <TextView
          android:layout_width="15dp"
          android:layout_height="1dp"
          android:background="@color/white" />

        <TextView
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@color/cf6f6f6" />
      </LinearLayout>


      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/white">

        <TextView
          android:id="@+id/tv_should_pay_new"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:layout_marginBottom="10dp"
          android:layout_marginLeft="15dp"
          android:text="@string/should_pay_new"
          android:textColor="@color/c333"
          android:textSize="13sp" />

        <TextView
          android:id="@+id/tv_receive_money"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_alignParentStart="true"
          android:layout_below="@+id/tv_should_pay_new"
          android:paddingLeft="15dp"
          android:text=""
          android:textColor="@color/c333"
          android:textSize="13sp" />


      </RelativeLayout>


      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal">
        <TextView
          android:layout_width="15dp"
          android:layout_height="1dp"
          android:background="@color/white" />

        <TextView
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@color/cf6f6f6" />
      </LinearLayout>


      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/white">

        <TextView
          android:id="@+id/tv_pay"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:layout_marginBottom="10dp"
          android:layout_marginLeft="15dp"
          android:text="@string/input_safe_pwd_new"
          android:textColor="@color/c333"
          android:textSize="13sp" />

        <EditText
          android:id="@+id/et_safe_code"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/tv_pay"
          android:paddingLeft="15dp"
          android:background="@null"
          android:hint="@string/please_input_safe_code"
          android:inputType="numberPassword"
          android:textColor="@color/c333"
          android:textColorHint="@color/c999"
          android:textSize="13sp" />

      </RelativeLayout>


      <Button
        android:id="@+id/btn_commit"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="80dp"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:background="@drawable/btn_blue_shape_8"
        android:text="@string/commits"
        android:textColor="@color/white"
        android:textSize="15sp" />

    </LinearLayout>
  </ScrollView>


</LinearLayout>
