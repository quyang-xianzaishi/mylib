<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/white"
  android:orientation="vertical">

  <TextView
    android:layout_width="match_parent"
    android:layout_height="25dp"
    android:background="#212E9D" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:background="#212E9D"
    android:gravity="center_vertical"
    android:orientation="horizontal">


    <ImageView
      android:id="@+id/iv_back_click"
      android:layout_width="22dp"
      android:layout_height="18dp"
      android:layout_marginLeft="15dp"
      android:layout_centerVertical="true"
      android:src="@mipmap/icon_back_white" />


    <TextView
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:layout_marginRight="37dp"
      android:gravity="center"
      android:text="@string/finance_center"
      android:textColor="@color/white"
      android:textSize="18sp" />

  </LinearLayout>

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">


      <RelativeLayout
        android:id="@+id/tv_asserts"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:background="@mipmap/finance_bg">

        <TextView
          android:id="@+id/tv_all_money"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="32dp"
          android:layout_centerHorizontal="true"
          android:text="0.00"
          android:textColor="@color/white"
          android:textSize="30sp" />


        <TextView
          android:id="@+id/tv_info"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:layout_below="@+id/tv_all_money"
          android:layout_centerHorizontal="true"
          android:gravity="center"
          android:text="资产总额(PCS)"
          android:textColor="#fffefe"
          android:textSize="11sp" />


        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="100dp"
          android:layout_alignParentBottom="true"
          android:layout_alignParentLeft="true"
          android:layout_alignParentStart="true"
          android:paddingTop="21dp"
          android:orientation="horizontal">

          <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
              android:id="@+id/tv_dream_package"
              style="@style/new_all_scan_style"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerHorizontal="true"
              android:text="0.00" />


            <TextView
              style="@style/new_all_scan_style_one"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@+id/tv_dream_package"
              android:layout_centerHorizontal="true"
              android:text="梦想背包" />

          </RelativeLayout>


          <TextView
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:alpha="0.2"
            android:background="@color/cf6f6f6" />


          <RelativeLayout
            android:id="@+id/rl_money_package"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
              android:id="@+id/tv_money_package"
              style="@style/new_all_scan_style"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerHorizontal="true"
              android:text="0.00" />


            <TextView
              style="@style/new_all_scan_style_one"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@+id/tv_money_package"
              android:layout_centerHorizontal="true"
              android:text="奖金背包" />

          </RelativeLayout>


          <TextView
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:alpha="0.2"
            android:background="@color/cf6f6f6" />

          <RelativeLayout
            android:id="@+id/rl_found_chi"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
              android:id="@+id/tv_active_code"
              style="@style/new_all_scan_style"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerHorizontal="true"
              android:text="0.00" />


            <TextView
              style="@style/new_all_scan_style_one"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@+id/tv_active_code"
              android:layout_centerHorizontal="true"
              android:text="@string/active_code" />

          </RelativeLayout>


          <TextView
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:alpha="0.2"
            android:background="@color/cf6f6f6" />


          <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
              android:id="@+id/tv_cuihuaji"
              style="@style/new_all_scan_style"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerHorizontal="true"
              android:text="0.00" />


            <TextView
              style="@style/new_all_scan_style_one"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@+id/tv_cuihuaji"
              android:layout_centerHorizontal="true"
              android:text="@string/cuihuaji" />

          </RelativeLayout>


        </LinearLayout>


      </RelativeLayout>


      <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/cf6f6f6" />

      <LinearLayout
        android:id="@+id/rg"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:orientation="horizontal"
        android:visibility="visible">

        <RelativeLayout
          android:id="@+id/buy_btn_click"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:gravity="center">


          <ImageView
            android:id="@+id/rb_match"
            android:layout_width="22dp"
            android:layout_height="19dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:src="@mipmap/icon_record_left" />

          <TextView
            android:id="@+id/tv_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/rb_match"
            android:layout_centerHorizontal="true"
            android:text="@string/buy_seed_process"
            android:textColor="@color/c333" />


        </RelativeLayout>


        <TextView
          android:layout_width="1dp"
          android:layout_height="match_parent"
          android:background="@color/cf6f6f6" />

        <RelativeLayout
          android:id="@+id/sell_btn_click"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:gravity="center">


          <ImageView
            android:id="@+id/rb_no_money"
            android:layout_width="22dp"
            android:layout_height="19dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:src="@mipmap/icon_record_right" />


          <TextView
            android:id="@+id/tv_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/rb_no_money"
            android:layout_centerHorizontal="true"
            android:text="@string/sell_seed_process"
            android:textColor="@color/c333" />

        </RelativeLayout>

      </LinearLayout>

      <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/cf6f6f6" />


      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:paddingTop="15dp"
          android:paddingLeft="15dp">

          <TextView
            android:id="@+id/tv_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/shouyi_zone"
            android:textColor="@color/c333"
            android:textSize="13sp" />

        </RelativeLayout>

        <TextView
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_marginLeft="15dp"
          android:background="@color/cf6f6f6" />

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="117dp"
          android:orientation="horizontal">

          <RelativeLayout
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:layout_marginTop="39dp"
            android:gravity="start"
            >

            <TextView
              android:id="@+id/tv_my_all_earnings"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="0"
              android:textColor="@color/cEA5412"
              android:textSize="20sp" />

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="10dp"
              android:layout_below="@+id/tv_my_all_earnings"
              android:text="@string/my_all_earning"
              android:textColor="@color/c333"
              android:textSize="11sp" />

          </RelativeLayout>


          <TextView
            android:layout_width="1dp"
            android:layout_height="56dp"
            android:layout_gravity="center_vertical"
            android:background="@color/cf6f6f6" />

          <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="15dp"
            android:gravity="center_vertical">

            <TextView
              android:id="@+id/tv_all_buy_seeds"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="买入种子数量"
              android:textColor="@color/c333"
              android:textSize="11sp" />

            <TextView
              android:id="@+id/tv_sell_seeds"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="7dp"
              android:layout_marginBottom="7dp"
              android:layout_below="@+id/tv_all_buy_seeds"
              android:text="卖出种子数量"
              android:textColor="@color/c333"
              android:textSize="11sp" />

            <TextView
              android:id="@+id/tv_dai_sell_seeds"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignLeft="@+id/tv_sell_seeds"
              android:layout_alignStart="@+id/tv_sell_seeds"
              android:layout_below="@+id/tv_sell_seeds"
              android:text="待卖出种子数量"
              android:textColor="@color/c333"
              android:textSize="11sp" />


          </RelativeLayout>

        </LinearLayout>

      </LinearLayout>


      <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/cf6f6f6" />


      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="12dp"
        android:orientation="vertical">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="180dp"
          android:layout_marginTop="5dp"
          android:paddingBottom="5dp"
          android:orientation="vertical">


          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">

            <TextView
              android:id="@+id/tv_month"
              android:layout_width="60dp"
              android:layout_height="30dp"
              android:background="@drawable/all_blue_shape_8"
              android:gravity="center"
              android:text="@string/select_month_one"
              android:textColor="@color/white"
              android:textSize="13sp" />

            <RelativeLayout
              android:layout_width="wrap_content"
              android:layout_marginLeft="10dp"
              android:layout_height="match_parent">

              <TextView
                android:id="@+id/tv_month_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=""
                android:layout_centerVertical="true"
                android:textColor="@color/c000"
                android:textSize="12sp" />

              <TextView
                android:layout_width="match_parent"
                android:background="@color/gray"
                android:layout_alignLeft="@+id/tv_month_info"
                android:layout_alignRight="@+id/tv_month_info"
                android:layout_alignParentBottom="true"
                android:layout_height="1dp" />


            </RelativeLayout>


          </LinearLayout>


          <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chart_line"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:scrollbars="none" />

        </LinearLayout>
      </LinearLayout>

    </LinearLayout>
  </ScrollView>


</LinearLayout>