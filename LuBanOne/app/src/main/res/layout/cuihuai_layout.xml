<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#f6f6f6"
  android:orientation="vertical">

  <FrameLayout
    android:id="@+id/one"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="25dp"
    android:background="@mipmap/finance_top_bg">

    <TextView
      android:layout_width="match_parent"
      android:layout_height="44dp"
      android:gravity="center"
      android:text="@string/cuihuaji"
      android:textColor="@color/white"
      android:textSize="18sp"/>

    <ImageView
      android:id="@+id/iv_back"
      android:layout_width="22dp"
      android:layout_height="18.5dp"
      android:layout_marginLeft="15dp"
      android:layout_gravity="center_vertical"
      android:src="@mipmap/icon_back_white"/>

    <TextView
      android:id="@+id/tv_back"
      android:layout_width="45dp"
      android:layout_height="20dp"
      android:layout_gravity="center_vertical"
      android:background="@color/transparenc_all"/>

  </FrameLayout>
  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@mipmap/finance_bg"
    android:layout_marginBottom="10dp"
    android:gravity="bottom"
    android:paddingBottom="30dp"
    android:visibility="visible">

    <TextView
      android:id="@+id/cuihuaji_count"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_horizontal"
      android:layout_marginBottom="4dp"
      android:text="0.00"
      android:textColor="@color/white"
      android:textSize="50sp" />

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/cuihuaji_count"
      android:layout_marginTop="0dp"
      android:gravity="center_horizontal"
      android:text="@string/cuihuaji_count"
      android:textColor="@color/cfff"
      android:textSize="12.5sp" />
  </RelativeLayout>

<LinearLayout
  android:layout_width="match_parent"
  android:layout_height="50dp"
  android:orientation="horizontal"
  android:background="@color/white"
  android:gravity="center">
  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/white"
    android:layout_gravity="center">
    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:background="@color/white"
      android:gravity="center_vertical"
      android:id="@+id/cuihuaji_detail">
      <TextView
        android:id="@+id/cuihuaji_detail_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12.5sp"
        android:textColor="@color/cEA5412"
        android:text="@string/cuihuaji_detail"
        android:layout_marginBottom="12dp"/>
      <TextView
        android:id="@+id/cuihuaji_detail_line"
        android:layout_width="15dp"
        android:layout_height="2dp"
        android:background="@drawable/cuihuaji_line_bg"
        android:layout_gravity="center_horizontal"
        android:visibility="visible"/>
    </LinearLayout>
    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:background="@color/white"
      android:layout_marginLeft="40dp"
      android:gravity="center_vertical"
      android:id="@+id/cuihuaji_obtain_record">
      <TextView
        android:id="@+id/cuihuaji_obtain_record_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12.5sp"
        android:textColor="#333333"
        android:text="@string/cuihuaji_obtain_record"
        android:layout_marginBottom="12dp"/>
      <TextView
        android:id="@+id/cuihuaji_obtain_record_line"
        android:layout_width="15dp"
        android:layout_height="2dp"
        android:background="@drawable/cuihuaji_line_bg"
        android:layout_gravity="center_horizontal"
        android:visibility="invisible"/>
    </LinearLayout>

  </LinearLayout>
</LinearLayout>
  <LinearLayout
    android:id="@+id/cuihuaji_detail_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="1px"
    android:paddingLeft="35dp"
    android:paddingRight="35dp"
    android:background="@color/white"
    android:orientation="vertical">
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:layout_marginBottom="17dp"
      android:layout_gravity="start"
      android:text="@string/how_to_get_cuihuaji"
      android:textColor="#333333"
      android:textSize="12.5sp" />

    <TextView
      android:id="@+id/tv_get_cuihuaji"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="40dp"
      android:gravity="start"
      android:text="@string/get_cuihuaji_details"
      android:textColor="#888888"
      android:textSize="11sp" />

    <Button
      android:id="@+id/btn_into_channel"
      android:layout_width="match_parent"
      android:layout_height="44dp"
      android:layout_marginLeft="20dp"
      android:layout_marginRight="20dp"
      android:layout_gravity="center_horizontal"
      android:background="@drawable/enter_renwu_btn_bg"
      android:gravity="center"
      android:text="@string/into_channel"
      android:textColor="#FEFEFE"
      android:textSize="15sp" />
  </LinearLayout>

  <LinearLayout
  android:id="@+id/cuihuaji_obtain_list"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  android:visibility="gone">

  <TextView
    android:id="@+id/tv_all_count"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="12dp"
    android:gravity="center_vertical"
    android:text="@string/all_count"
    android:textColor="@color/c000"
    android:textSize="13sp"
    android:visibility="gone"/>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#f9f9f9"
    android:orientation="horizontal">


    <TextView
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:gravity="center"
      android:text="@string/transfer_data"
      android:textColor="#333333"
      android:textSize="12.5sp"/>

    <TextView
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:gravity="center"
      android:text="@string/task"
      android:textColor="#333333"
      android:textSize="12.5sp"/>

    <TextView
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:gravity="center"
      android:text="@string/count"
      android:textColor="#333333"
      android:textSize="12.5sp"/>
  </LinearLayout>


  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/cf6f6f6">


    <com.jingchen.pulltorefresh.PullToRefreshLayout
      android:id="@+id/empty_layout"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center"
      android:visibility="gone">

      <com.jingchen.pulltorefresh.PullableImageView
        android:id="@+id/task_fragment_no_data_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="40dp"
        android:background="@color/white"
        android:src="@mipmap/no_date" />

    </com.jingchen.pulltorefresh.PullToRefreshLayout>



    <com.jingchen.pulltorefresh.PullToRefreshLayout
      android:id="@+id/pull"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1">

      <com.jingchen.pulltorefresh.PullableListView
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#fff"
        android:dividerHeight="0px"
        android:scrollbars="none"/>

    </com.jingchen.pulltorefresh.PullToRefreshLayout>

  </LinearLayout>
</LinearLayout>


</LinearLayout>