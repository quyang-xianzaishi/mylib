<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/white"
  android:gravity="center_horizontal"
  android:orientation="vertical">

  <TextView
    android:layout_width="match_parent"
    android:layout_height="23dp"
    android:background="@color/chead" />

  <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
      android:layout_width="match_parent"
      android:layout_height="44dp"
      android:gravity="center"
      android:text="@string/active_account"
      android:textColor="#000"
      android:textSize="17sp" />

    <ImageView
      android:id="@+id/iv_back"
      android:layout_width="22dp"
      android:layout_height="18dp"
      android:layout_marginLeft="12dp"
      android:layout_gravity="center_vertical"
      android:src="@mipmap/icon_back_gray"
      android:visibility="gone" />

    <TextView
      android:id="@+id/tv_back"
      android:layout_width="40dp"
      android:layout_height="24dp"
      android:layout_marginLeft="12dp"
      android:layout_gravity="center_vertical"
      android:background="@color/transparenc_all"
      android:visibility="gone" />

  </FrameLayout>

  <TextView
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/cf6f6f6" />

  <ImageView
    android:id="@+id/icon"
    android:layout_width="match_parent"
    android:layout_height="46dp"
    android:layout_marginTop="70.5dp"
    android:layout_marginBottom="94dp"
    android:layout_marginLeft="98dp"
    android:layout_marginRight="98dp"
    android:src="@mipmap/logo_new" />


  <TextView
    android:id="@+id/tip_success"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:text="@string/active_oen_info"
    android:textColor="@color/c666"
    android:textSize="11sp" />

  <Button
    android:id="@+id/btn_next"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:layout_marginTop="125dp"
    android:layout_marginLeft="55dp"
    android:layout_marginRight="55dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:background="@drawable/all_blue_shape_10"
    android:text="@string/btn_next"
    android:textColor="@color/white"
    android:textSize="16sp" />
</LinearLayout>


