<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical">


  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="210dp"
    android:background="@color/white"
    android:gravity="center">

    <ImageView
      android:id="@+id/sensitize_member"
      android:layout_width="180dp"
      android:layout_height="180dp"
      android:layout_centerHorizontal="true"
      android:src="@mipmap/activation_btn" />

  </RelativeLayout>


  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:paddingLeft="15dp"
      android:gravity="center_vertical"
      android:text="@string/my_ling_dao"
      android:textColor="@color/c333"
      android:textSize="12.5sp" />

    <TextView
      android:id="@+id/my_leader"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:paddingRight="15dp"
      android:drawablePadding="5dp"
      android:drawableRight="@mipmap/next_gray_2x_5"
      android:gravity="end|center_vertical"
      android:text=""
      android:textSize="12.5sp"
      android:textColor="@color/_888888"/>

  </LinearLayout>


  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="85dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:background="@color/white"
    android:gravity="center_vertical">

    <TextView
      android:id="@+id/tv_my_vip_level"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="5dp"
      android:gravity=""
      android:text="@string/my_vip_level"
      android:textColor="@color/cf77523"
      android:textSize="12.5sp" />

    <TextView
      android:id="@+id/tv_my_level"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/tv_my_vip_level"
      android:text=""
      android:textColor="@color/cf77523"
      android:textSize="30sp" />

    <TextView
      android:id="@+id/my_team_all_person"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:text="@string/my_team_all_person"
      android:textColor="@color/c333"
      android:textSize="12.5sp" />

    <TextView
      android:id="@+id/tv_persons"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginRight="20dp"
      android:layout_alignParentRight="true"
      android:layout_below="@+id/my_team_all_person"
      android:textColor="@color/c333"
      android:textSize="30sp" />


  </RelativeLayout>


  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/white"
    android:orientation="horizontal">
    <TextView
      android:id="@+id/tv_look_new"
      android:layout_width="0dp"
      android:layout_height="50dp"
      android:layout_weight="1"
      android:paddingLeft="15dp"
      android:paddingRight="15dp"
      android:background="@color/white"
      android:gravity="center_vertical"
      android:text="@string/look_members"
      android:textColor="@color/c333"
      android:textSize="12.5sp" />

    <RelativeLayout
      android:id="@+id/rl_container"
      android:layout_width="50dp"
      android:layout_height="match_parent"
      android:paddingRight="15dp"
      android:gravity="end|center_vertical">
      <ImageView
        android:id="@+id/tv_look"
        android:layout_width="14dp"
        android:layout_height="8.5dp"
         />
    </RelativeLayout>


  </LinearLayout>


</LinearLayout>