<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#f6f6f6"
  android:orientation="vertical">

  <TextView
    android:layout_width="match_parent"
    android:layout_height="25dp"
    android:background="@color/title_background_blue"/>
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingRight="37dp"
    android:background="@color/title_background_blue"
    android:orientation="horizontal">

    <TextView
      android:id="@+id/back"
      android:layout_width="22dp"
      android:layout_height="18.5dp"
      android:layout_gravity="center_vertical"
      android:background="@mipmap/icon_back_white"
      android:textColor="@color/white"/>

    <TextView
      android:id="@+id/title"
      android:layout_width="0dp"
      android:layout_height="44dp"
      android:layout_weight="1"
      android:background="@color/title_background_blue"
      android:gravity="center"
      android:text="聊天信息"
      android:textColor="@color/white"
      android:textSize="18sp"/>
  </LinearLayout>
  <TextView
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/cf6f6f6"/>

  <ScrollView
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="#f6f6f6"
      android:orientation="vertical">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <com.example.administrator.lubanone.customview.MyGridView
          android:id="@+id/my_grid_view"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:layout_marginLeft="15dp"
          android:layout_marginRight="15dp"
          android:gravity="center_horizontal"
          android:listSelector="@android:color/transparent"
          android:numColumns="5"
          android:stretchMode="columnWidth"/>

        <com.example.administrator.lubanone.customview.AutoLineLayout
          android:id="@+id/img_auto_line"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginBottom="10dp"
          android:layout_centerHorizontal="true"
          android:paddingLeft="7dp"
          android:paddingRight="7dp"
          android:visibility="gone"/>

        <TextView
          android:id="@+id/check_all_member"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingLeft="15dp"
          android:paddingRight="15dp"
          android:paddingTop="8dp"
          android:paddingBottom="8dp"
          android:text="查看全部群成员"
          android:textSize="12.5sp"
          android:textColor="@color/c333"
          android:gravity="center"
          android:visibility="gone"/>
      </LinearLayout>

      <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/cf6f6f6"/>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:layout_gravity="center_vertical"
          android:gravity="center_vertical"
          android:text="@string/group_name"
          android:textColor="@color/c333"
          android:textSize="12.5sp"/>

        <LinearLayout
          android:id="@+id/group_name_set"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:orientation="horizontal">

          <TextView
            android:id="@+id/group_name"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:text="@string/no_name"
            android:textColor="@color/_888888"
            android:textSize="11sp"/>

          <ImageView
            android:id="@+id/group_name_clickable"
            android:layout_width="8.5dp"
            android:layout_height="14dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/next_gray_2x_5"/>
        </LinearLayout>
      </LinearLayout>

      <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/cf6f6f6"
        android:layout_marginLeft="15dp"/>
      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:gravity="center_vertical"
          android:text="@string/group_notice"
          android:textColor="@color/c333"
          android:textSize="12.5sp"/>

        <LinearLayout
          android:id="@+id/group_notice_set"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:orientation="horizontal">

          <TextView
            android:id="@+id/group_notice"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:text="@string/no_set"
            android:textColor="@color/_888888"
            android:textSize="11sp"
            android:layout_gravity="center_vertical"/>

          <ImageView
            android:id="@+id/group_notice_clickable"
            android:layout_width="8.5dp"
            android:layout_height="14dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/next_gray_2x_5"
            />
        </LinearLayout>
      </LinearLayout>
      <TextView
        android:id="@+id/group_notice_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:visibility="gone"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:gravity="center_vertical"
        android:paddingTop="0dp"
        android:paddingBottom="15dp"
        android:background="@color/white"
        android:textColor="@color/_888888"
        android:textSize="11sp"/>

      <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/cf6f6f6"/>
<LinearLayout
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  android:background="@color/white">
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:gravity="center_vertical"
          android:text="@string/message_no_disturb"
          android:textColor="@color/c333"
          android:textSize="12.5sp"/>

        <com.example.administrator.lubanone.customview.ToggleButtonView.ToggleButton
          android:id="@+id/message_disturb"
          android:layout_width="51dp"
          android:layout_height="31dp"
          android:background="@drawable/em_chat_video_normal"
          android:layout_gravity="center_vertical"
          tools:targetApi="ice_cream_sandwich"/>
      </LinearLayout>

      <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/cf6f6f6"
        android:layout_marginLeft="15dp"/>
</LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:background="@color/white">
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:gravity="center_vertical"
          android:text="@string/conversation_top"
          android:textColor="@color/c333"
          android:textSize="12.5sp"/>

        <com.example.administrator.lubanone.customview.ToggleButtonView.ToggleButton
          android:id="@+id/conversation_top"
          android:layout_width="51dp"
          android:layout_height="31dp"
          android:background="@drawable/em_chat_video_normal"
          android:layout_gravity="center_vertical"
          tools:targetApi="ice_cream_sandwich"/>
      </LinearLayout>

      <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/cf6f6f6"
        android:layout_marginLeft="15dp"/>
    </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:gravity="center_vertical"
          android:text="@string/save_address"
          android:textColor="@color/c333"
          android:textSize="12.5sp"/>

        <com.example.administrator.lubanone.customview.ToggleButtonView.ToggleButton
          android:id="@+id/save_address"
          android:layout_width="51dp"
          android:layout_height="31dp"
          android:background="@drawable/em_chat_video_normal"
          android:layout_gravity="center_vertical"
          tools:targetApi="ice_cream_sandwich"/>
      </LinearLayout>

      <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/cf6f6f6"
        android:visibility="gone"/>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:gravity="center_vertical"
          android:text="@string/name_in_this_group"
          android:textColor="@color/black"
          android:textSize="14sp"/>

        <LinearLayout
          android:id="@+id/user_name_set"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:orientation="horizontal">

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="@string/no_name"
            android:textColor="@color/gray"
            android:textSize="12sp"/>

          <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/detail_img"/>
        </LinearLayout>
      </LinearLayout>

      <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#666"
        android:visibility="gone"/>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:gravity="center_vertical"
          android:text="@string/group_name_show"
          android:textColor="@color/black"
          android:textSize="14sp"/>

        <com.example.administrator.lubanone.customview.ToggleButtonView.ToggleButton
          android:id="@+id/group_name_show"
          android:layout_width="60dp"
          android:layout_height="30dp"
          android:background="@drawable/em_chat_video_normal"
          android:gravity="center_vertical"
          tools:targetApi="ice_cream_sandwich"/>
      </LinearLayout>

      <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/cf6f6f6"/>

      <LinearLayout
        android:id="@+id/search_chat_content"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:gravity="center_vertical"
          android:text="@string/search_chat_content"
          android:textColor="@color/black"
          android:textSize="14sp"/>

        <ImageView
          android:layout_width="15dp"
          android:layout_height="15dp"
          android:layout_marginLeft="20dp"
          android:layout_gravity="center_vertical"
          android:src="@mipmap/detail_img"/>
      </LinearLayout>

      <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#666"
        android:visibility="gone"/>

      <LinearLayout
        android:id="@+id/complain"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:gravity="center_vertical"
          android:text="@string/complain"
          android:textColor="@color/c333"
          android:textSize="12.5sp"/>

        <ImageView
          android:layout_width="8.5dp"
          android:layout_height="14dp"
          android:layout_marginLeft="20dp"
          android:layout_gravity="center_vertical"
          android:src="@mipmap/next_gray_2x_5"/>
      </LinearLayout>

      <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/cf6f6f6"/>

      <LinearLayout
        android:id="@+id/clear_chat_content"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:gravity="center_vertical"
          android:text="@string/clear_chat_content"
          android:textColor="@color/c333"
          android:textSize="12.5sp"/>

        <ImageView
          android:layout_width="8.5dp"
          android:layout_height="14dp"
          android:layout_marginLeft="20dp"
          android:layout_gravity="center_vertical"
          android:src="@mipmap/next_gray_2x_5"/>
      </LinearLayout>

      <TextView
        android:id="@+id/delete_and_exit"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_weight="1"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:background="@drawable/blue_white_round_selector"
        android:gravity="center"
        android:text="@string/detele_and_exit"
        android:textColor="@color/white"
        android:textSize="16sp"/>
    </LinearLayout>
  </ScrollView>

</LinearLayout>
