<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/activity_register_success"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/white"
  android:orientation="vertical">

  <TextView
    android:layout_width="match_parent"
    android:layout_height="23dp"
    android:background="@color/chead" />

  <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:visibility="visible">

    <TextView
      android:layout_width="match_parent"
      android:layout_height="44dp"
      android:gravity="center"
      android:text="@string/set_pay_pwd"
      android:textColor="#000"
      android:textSize="17sp" />

    <ImageView
      android:id="@+id/iv_back"
      android:layout_width="22dp"
      android:layout_height="18dp"
      android:layout_marginLeft="15dp"
      android:visibility="gone"
      android:layout_gravity="center_vertical"
      android:src="@mipmap/icon_back_gray" />

    <TextView
      android:id="@+id/tv_back"
      android:layout_width="40dp"
      android:layout_height="24dp"
      android:layout_marginLeft="12dp"
      android:layout_gravity="center_vertical"
      android:background="@color/transparenc_all"
      android:visibility="gone" />

  </FrameLayout>
  <TextView
    android:layout_width="match_parent"
    android:layout_height="1px"
    android:background="#bbb" />

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="70dp"
    android:gravity="center_horizontal">


    <TextView
      android:id="@+id/tip_success"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="55dp"
      android:layout_below="@+id/icon"
      android:gravity="center"
      android:text="@string/active_sucess"
      android:textColor="@color/cEA5412"
      android:textSize="15sp" />

    <TextView
      android:id="@+id/tip_next"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="23dp"
      android:layout_below="@+id/tip_success"
      android:paddingLeft="20dp"
      android:paddingRight="20dp"
      android:gravity="center"
      android:text="@string/active_two_info_two"
      android:textColor="@color/c666"
      android:textSize="11sp" />


    <ImageView
      android:id="@+id/icon"
      android:layout_width="226dp"
      android:layout_height="46dp"
      android:src="@mipmap/logo_new"
      android:layout_alignParentTop="true"
      android:layout_centerHorizontal="true" />

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginTop="27dp"
      android:layout_below="@+id/tip_next"
      android:orientation="vertical">

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/six_pwd"
        android:textColor="@color/light_gray"
        android:textSize="9sp"
        android:visibility="gone" />

      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <EditText
          android:id="@+id/et_pwd_one"
          android:layout_width="25dp"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:layout_height="46dp"
          android:gravity="center"
          android:textColor="#171c61"
          android:theme="@style/MyEditText"
          android:inputType="numberPassword" />

        <EditText
          android:id="@+id/et_pwd_two"
          android:layout_width="25dp"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:layout_height="46dp"
          android:textColor="#171c61"
          android:gravity="center"
          android:theme="@style/MyEditText"
          android:inputType="numberPassword" />


        <EditText
          android:id="@+id/et_pwd_three"
          android:layout_width="25dp"
          android:layout_height="46dp"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:theme="@style/MyEditText"
          android:gravity="center"
          android:textColor="#171c61"
          android:inputType="numberPassword" />


        <EditText
          android:id="@+id/et_pwd_four"
          android:layout_width="25dp"
          android:layout_height="46dp"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:textColor="#171c61"
          android:theme="@style/MyEditText"
          android:gravity="center"
          android:inputType="numberPassword" />

        <EditText
          android:id="@+id/et_pwd_five"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:layout_width="25dp"
          android:theme="@style/MyEditText"
          android:layout_height="46dp"
          android:gravity="center"
          android:inputType="numberPassword" />


        <EditText
          android:id="@+id/et_pwd_six"
          android:layout_width="25dp"
          android:textColor="#171c61"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:layout_height="46dp"
          android:theme="@style/MyEditText"
          android:gravity="center"
          android:inputType="numberPassword" />

      </LinearLayout>
      <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/round_blue"
        android:text="@string/btn_next"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:visibility="gone" />

    </LinearLayout>


  </RelativeLayout>


</LinearLayout>
