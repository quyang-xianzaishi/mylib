<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/activity_user_level"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/white"
  android:orientation="vertical"
  tools:context="com.example.administrator.lubanone.activity.home.UserLevelActivity">

  <FrameLayout
    android:id="@+id/one"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="25dp"
    android:background="#EB812D">

    <TextView
      android:id="@+id/tv_title"
      android:layout_width="match_parent"
      android:layout_height="44dp"
      android:gravity="center"
      android:text="@string/vip_dengji"
      android:textColor="@color/white"
      android:textSize="17sp" />

    <ImageView
      android:id="@+id/iv_back"
      android:layout_width="22dp"
      android:layout_height="18dp"
      android:layout_marginLeft="12dp"
      android:layout_gravity="center_vertical"
      android:src="@mipmap/icon_back" />

    <TextView
      android:id="@+id/tv_back"
      android:layout_width="40dp"
      android:layout_height="24dp"
      android:layout_marginLeft="12dp"
      android:layout_gravity="center_vertical"
      android:background="@color/transparenc_all" />


  </FrameLayout>

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
          android:id="@+id/iv_icon"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:scaleType="centerCrop" />

        <TextView
          android:id="@+id/tv_grade"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="25dp"
          android:layout_marginLeft="15dp"
          android:text=""
          android:textColor="@color/cfff" />
      </RelativeLayout>


      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="4"
          android:paddingLeft="12dp"
          android:gravity="center_vertical"
          android:text="@string/my_current_vip_level"
          android:textColor="#191C61" />

        <TextView
          android:id="@+id/tv_vip_level"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:layout_marginRight="12dp"
          android:gravity="end"
          android:text=""
          android:textColor="#191C61" />


      </LinearLayout>

      <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/transparency_light_black"
        android:visibility="gone" />

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
          android:id="@+id/textView10"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="4"
          android:paddingLeft="12dp"
          android:background="@color/white"
          android:gravity="center_vertical"
          android:text="@string/team_count"
          android:textColor="#191C61" />

        <TextView
          android:id="@+id/tv_team_count"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:layout_marginRight="12dp"
          android:gravity="end"
          android:text=""
          android:textColor="#191C61" />


      </LinearLayout>

      <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/transparency_light_black"
        android:visibility="gone" />

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="4"
          android:paddingLeft="12dp"
          android:gravity="center_vertical"
          android:text="@string/zhitui_count"
          android:textColor="#191C61" />

        <TextView
          android:id="@+id/tv_zhitui_count"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:layout_marginRight="12dp"
          android:gravity="end"
          android:text=""
          android:textColor="#191C61" />


      </LinearLayout>

      <TextView
        android:id="@+id/tv_my_team"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/white"
        android:drawableRight="@mipmap/next_gray_2x_5"
        android:gravity="center_vertical"
        android:text="@string/look_my_team"
        android:textColor="@color/c333" />

      <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:background="@color/cf6f6f6" />

      <TextView
        android:id="@+id/tv_vip_system"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:drawableRight="@mipmap/next_gray_2x_5"
        android:gravity="center_vertical"
        android:text="@string/vip_level_system"
        android:textColor="@color/c333" />

      <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:background="@color/cf6f6f6" />

      <TextView
        android:id="@+id/tv_always_problems"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:drawableRight="@mipmap/next_gray_2x_5"
        android:gravity="center_vertical"
        android:text="@string/always_problems"
        android:textColor="@color/c333" />

      <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:background="@color/cf6f6f6" />


    </LinearLayout>

  </ScrollView>


</LinearLayout>
