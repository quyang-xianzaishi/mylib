<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f6">

    <TextView
      android:layout_width="match_parent"
      android:layout_height="25dp"
      android:background="@color/title_background_blue"/>
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingLeft="15dp"
      android:paddingRight="15dp"
      android:background="@color/title_background_blue"
      android:orientation="horizontal">

        <TextView
          android:id="@+id/back"
          android:layout_width="22dp"
          android:layout_height="18.5dp"
          android:layout_gravity="center_vertical"
          android:background="@mipmap/icon_back_white"
          android:textColor="@color/white"/>

        <TextView
          android:id="@+id/title"
          android:layout_width="0dp"
          android:layout_height="44dp"
          android:layout_weight="1"
          android:background="@color/title_background_blue"
          android:gravity="center"
          android:text="@string/member_info_title"
          android:textColor="@color/white"
          android:textSize="18sp"/>

        <TextView
          android:id="@+id/data_set"
          android:layout_width="22.5dp"
          android:layout_height="4.5dp"
          android:layout_gravity="center_vertical"
          android:background="@drawable/more_white"
          android:textColor="@color/white"
          android:visibility="invisible"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#f6f6f6"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:background="@color/white">

        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:id="@+id/member_img"
            android:src="@mipmap/logo"
            android:scaleType="fitXY"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="19dp"
            android:layout_marginBottom="19dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="9dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/member_info_nickname"
                    android:textColor="@color/c333"
                    android:textSize="15sp"
                    android:layout_marginRight="5dp"
                    android:visibility="visible"/>
                <TextView
                    android:id="@+id/member_remark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/c333"
                    android:textSize="15sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="0dp"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/member_name"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginRight="5dp"/>
                <TextView
                    android:id="@+id/member_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="0dp"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/member_id"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginRight="5dp"/>
                <TextView
                    android:id="@+id/member_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="0dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/member_grade"
                    android:textColor="@color/_888888"
                    android:textSize="12.5sp"
                    android:layout_marginRight="5dp"/>
                <TextView
                    android:id="@+id/member_grade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/_888888"
                    android:textSize="12.5sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:layout_marginTop="10dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/personality_signature"
            android:textColor="@color/c333"
            android:textSize="12.5sp"
            android:layout_marginRight="15dp"/>

        <TextView
            android:id="@+id/member_personality_signature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/c333"
            android:textSize="12.5sp"
            android:maxLines="5"
            android:ellipsize="end"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#bbb"
        android:visibility="gone"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#bbb"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/remark_set"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/remark_set"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:padding="12dp"
        android:visibility="gone"/>

