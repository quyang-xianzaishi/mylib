<?xml version="1.0" encoding="utf-8"?>
<com.example.administrator.lubanone.customview.CustomInsetsLinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:fitsSystemWindows="true">

  <TextView
    android:layout_width="match_parent"
    android:layout_height="25dp"
    android:background="@color/title_background_blue"/>

  <include layout="@layout/activity_order_message_title"/>

  <TextView
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/gray_e7e7e7"/>

  <!--<fragment
    android:id="@+id/custom_problem_fragment"
    android:name = "com.example.administrator.lubanone.fragment.message.CustomProblemFragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    />-->

  <LinearLayout
    android:id="@+id/contact_custom"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:layout_gravity="center_horizontal"
    android:visibility="gone">
  <TextView
    android:id="@+id/contact_custom_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="14sp"
    android:textColor="@color/blue"
    android:text="@string/collect_custom"
    android:layout_gravity="center_horizontal"/>
  </LinearLayout>

  <LinearLayout
    android:id="@+id/custom_linear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="visible">
  <fragment
    android:id="@+id/custom_fragment"
    android:name = "com.example.administrator.lubanone.fragment.message.CustomFragment"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight = "1"/>

  </LinearLayout>



</com.example.administrator.lubanone.customview.CustomInsetsLinearLayout>