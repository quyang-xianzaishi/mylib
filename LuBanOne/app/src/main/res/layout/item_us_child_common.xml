<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="85dp"
  android:paddingTop="15dp"
  android:paddingBottom="15dp"
  android:paddingLeft="12dp"
  android:paddingRight="12dp"
  android:background="@color/white"
  android:orientation="horizontal">
  <ImageView
    android:id="@+id/us_child_common_item_image"
    android:layout_width="55dp"
    android:layout_height="55dp"
    android:background="@drawable/image_rect_bg"
    android:src="@drawable/ic_launcher"/>
  <LinearLayout
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:layout_marginLeft="15dp"
    android:orientation="vertical"
    android:gravity="center_vertical">
    <TextView
      android:id="@+id/us_child_common_item_title"
      style="@style/font_000_14"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:ellipsize="end"
      android:lines="1"
      android:text="社会关注"/>

    <TextView
      android:id="@+id/us_child_common_item_content"
      style="@style/font_666_12"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:ellipsize="end"
      android:lines="2"
      android:text="社会关注"/>

  </LinearLayout>


</LinearLayout>