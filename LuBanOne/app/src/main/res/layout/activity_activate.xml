<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/cf6f6f6"
  android:orientation="vertical">

  <TextView
    android:layout_width="match_parent"
    android:layout_height="25dp"
    android:background="@color/chead" />


  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingRight="22dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <TextView
      android:id="@+id/activity_back"
      android:layout_width="22dp"
      android:layout_height="18dp"
      android:layout_gravity="center_vertical"
      android:background="@mipmap/icon_back_gray"
      android:textColor="@color/white" />


    <TextView
      android:id="@+id/tv_back"
      android:layout_width="30dp"
      android:layout_height="20dp" />

    <TextView
      android:id="@+id/activity_title"
      android:layout_width="0dp"
      android:layout_height="45dp"
      android:layout_weight="1"
      android:layout_marginRight="30dp"
      android:gravity="center"
      android:text="@string/active_vip"
      android:textColor="@color/c333"
      android:textSize="18sp" />

  </LinearLayout>


  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/cf6f6f6"
    android:orientation="horizontal">
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:paddingLeft="15dp"
      android:gravity="center_vertical"
      android:text="@string/activation_number"
      android:textColor="@color/c1e257c"
      android:textSize="11dp" />

    <TextView
      android:id="@+id/activation_number"
      android:layout_width="match_parent"
      android:layout_height="40dp"
      android:background="#F6F6F6"
      android:gravity="center_vertical"
      android:textColor="@color/c1e257c"
      android:textSize="11sp" />

  </LinearLayout>


  <EditText
    android:id="@+id/user_nickname"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:paddingLeft="15dp"
    android:background="@color/white"
    android:hint="@string/please_input_user_name"
    android:textColorHint="@color/c999"
    android:textColor="@color/c333"
    android:textSize="12.5sp" />


  <Button
    android:id="@+id/activate_btn"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:layout_marginTop="40dp"
    android:layout_marginLeft="55dp"
    android:layout_marginRight="55dp"
    android:background="@mipmap/button"
    android:text="@string/active"
    android:textColor="@color/white" />


</LinearLayout>