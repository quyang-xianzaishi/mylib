<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/cf6f6f6">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@color/title_background_blue"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/title_background_blue"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/choose_friend_cancle"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/title_background_blue"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/choose_friend_title"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/title_background_blue"
            android:gravity="center"
            android:text="@string/choose_address_title"
            android:textColor="@color/white"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/choose_friend_commit"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/title_background_blue"
            android:text="@string/wancheng_title"
            android:textSize="15sp"
            android:gravity="end"
            android:textColor="@color/c999"
            android:clickable="false"/>

    </LinearLayout>
    <TextView
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/cf6f6f6"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/apply_training_summary_shape"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:src="@mipmap/task_search_icon_2x"/>

            <EditText
                android:id="@+id/choose_friend_search"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/search_hint"
                android:paddingLeft="5dp"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:gravity="center_vertical"
        android:background="@color/white">

        <HorizontalScrollView
          android:id="@+id/horizonMenu"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:background="#ffffff"
          android:scrollbars="none"
          android:layout_centerVertical="true">

            <LinearLayout
              android:id="@+id/choose_friend_img"
              android:layout_width="wrap_content"
              android:layout_height="50dp"
              android:orientation="horizontal"
              android:gravity="center_vertical"
              android:layout_centerVertical="true"
              />

        </HorizontalScrollView>
    <com.example.administrator.lubanone.customview.MySearchView
        android:id="@+id/friend_search"
        android:layout_width="match_parent"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/horizonMenu"
        android:gravity="center_vertical"
        android:hint="搜索"
        android:layout_height="50dp"
        android:minWidth="50dp"
        android:background="@color/white"
        app:SearchTextColor="@color/c999"
        app:SearchTextSize="12.5sp"/>
    </RelativeLayout>

    <TextView
      android:id="@+id/no_data"
      android:layout_width="90dp"
      android:layout_height="100dp"
      android:background="@drawable/no_data"
      android:layout_gravity="center"
      android:layout_marginTop="150dp"
      android:visibility="gone"/>

    <RelativeLayout
      android:id="@+id/list_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="visible">

        <ListView
            android:id="@+id/choose_friend_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:background="@color/cf6f6f6"
            android:dividerHeight="0dp"
            android:divider="@color/white"/>

        <com.example.administrator.lubanone.customview.SideBarView
            android:id="@+id/choose_friend_slide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/tip"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:background="@color/gray"
            android:gravity="center"
            android:text="A"
            android:textSize="40sp"
            android:visibility="gone"/>

    </RelativeLayout>

</LinearLayout>