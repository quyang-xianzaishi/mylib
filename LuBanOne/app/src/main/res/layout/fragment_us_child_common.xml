<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">
  <com.jingchen.pulltorefresh.PullToRefreshLayout
    android:id="@+id/us_child_common_no_data"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:visibility="gone"
    >
    <com.jingchen.pulltorefresh.PullableImageView
      android:id="@+id/us_child_common_no_data_image"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:padding="130dp"
      android:background="@color/white"
      android:src="@drawable/loading_fail"/>
  </com.jingchen.pulltorefresh.PullToRefreshLayout>

  <com.jingchen.pulltorefresh.PullToRefreshLayout
    android:id="@+id/us_child_common_refreshLayout"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    >
    <com.jingchen.pulltorefresh.PullableListView
      android:id="@+id/us_child_common_listview"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/white"
      android:divider="@drawable/task_list_view_divider"
      android:dividerHeight="0.5dp"
      android:scrollbars="none"
      />
  </com.jingchen.pulltorefresh.PullToRefreshLayout>
</LinearLayout>