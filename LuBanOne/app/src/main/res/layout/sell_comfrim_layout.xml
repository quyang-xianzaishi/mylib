<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:paddingTop="10dp"
  android:paddingBottom="10dp"
  android:background="@color/white"
  android:orientation="vertical">

  <TextView
    android:id="@+id/tv_order_id"
    style="@style/buy_seeds_no_money_text_style"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>

  <TextView
    android:id="@+id/tv_apply_time"
    style="@style/buy_seeds_no_money_text_style"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>


  <TextView
    android:id="@+id/tv_seeds_count"
    style="@style/buy_seeds_no_money_text_style"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>

  <TextView
    android:id="@+id/tv_match_time"
    style="@style/buy_seeds_no_money_text_style"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>

  <TextView
    android:id="@+id/tv_seller"
    style="@style/buy_seeds_no_money_text_style"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:drawablePadding="9dp"
    android:drawableRight="@mipmap/blue_i_2x"
    android:textColor="@color/blue"/>

  <TextView
    android:id="@+id/tv_have_time"
    style="@style/buy_seeds_no_money_text_style"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/red"/>


  <TextView
    android:id="@+id/tv_order_status"
    style="@style/buy_seeds_no_money_text_style"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>

  <LinearLayout
    android:id="@+id/ll_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="visible">
    <TextView
      android:id="@+id/tv_tips"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingLeft="12dp"
      android:paddingRight="12dp"
      android:drawableLeft="@mipmap/warm_color_2x"
      android:drawablePadding="10dp"
      android:text="@string/have_time_tips"
      android:textColor="@color/c666"
      android:textSize="10sp"/>

    <TextView
      android:layout_width="match_parent"
      android:layout_height="1px"
      android:layout_marginTop="10dp"
      android:layout_marginBottom="10dp"
      android:background="@color/transparency_light_black"/>


    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_vertical">

      <TextView
        android:id="@+id/tv_pay_long_time"
        style="@style/btn_one_selector"
        android:layout_width="125dp"
        android:layout_height="34dp"
        android:layout_toLeftOf="@+id/tv_upload_proof"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:gravity="center"
        android:text="@string/long_pay_time"
        android:textSize="12sp"
        />

      <TextView
        android:id="@+id/tv_upload_proof"
        style="@style/btn_one_selector"
        android:layout_width="125dp"
        android:layout_height="34dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="12dp"
        android:layout_alignParentRight="true"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:gravity="center"
        android:text="@string/uuload_pay_proof"
        android:textSize="12sp"/>

    </RelativeLayout>
  </LinearLayout>


</LinearLayout>