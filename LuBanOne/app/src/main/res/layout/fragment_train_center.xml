<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/cf6f6f6"
  android:orientation="vertical"
  >
  <include layout="@layout/activity_status_bar"/>

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@color/title_background_blue">

    <TextView
      style="@style/page_title"
      android:layout_centerInParent="true"
      android:text="@string/train_center"/>
    <LinearLayout
      android:id="@+id/train_center_back_btn"
      android:layout_width="40dp"
      android:layout_height="match_parent"
      android:layout_alignParentLeft="true"
      android:layout_centerVertical="true">
      <ImageView
        android:layout_width="22dp"
        android:layout_height="18.5dp"
        android:layout_marginLeft="12dp"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/icon_back_white"/>
    </LinearLayout>
  </RelativeLayout>
  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/white"
    android:visibility="gone">
    <View
      android:id="@+id/training_center_midline"
      android:layout_width="1dp"
      android:layout_height="20dp"
      android:layout_centerInParent="true"
      android:layout_gravity="center"
      android:background="#bbb"/>
    <TextView
      android:id="@+id/training_center_platform_data"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_marginRight="10dp"
      android:layout_centerVertical="true"
      android:layout_toLeftOf="@id/training_center_midline"
      android:gravity="center"
      android:text="@string/platform_train_data"
      android:textColor="@color/selector_text_orange"/>
    <TextView
      android:id="@+id/training_center_vip_data"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_marginLeft="10dp"
      android:layout_centerVertical="true"
      android:layout_toRightOf="@id/training_center_midline"
      android:gravity="center"
      android:text="@string/vip_train_data"
      android:textColor="@color/selector_text_orange"/>
  </RelativeLayout>

  <android.support.design.widget.TabLayout
    android:id="@+id/train_center_tab_layout"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@color/white"
    app:tabIndicatorColor="@color/orange_ea5412"
    app:tabIndicatorHeight="2dp"
    app:tabSelectedTextColor="@color/orange_ea5412"
    app:tabTextAppearance="@style/tab_layout_text_style"
    />

  <View
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:background="@color/gray_e7e7e7"/>
  <!--<com.example.administrator.lubanone.customview.UnScrollViewPager-->
  <!--android:id="@+id/training_center_unscrollvp"-->
  <!--android:layout_width="match_parent"-->
  <!--android:layout_height="0dp"-->
  <!--android:layout_weight="1"/>-->
  <android.support.v4.view.ViewPager
    android:id="@+id/training_center_unscrollvp"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"/>
</LinearLayout>