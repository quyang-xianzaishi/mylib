<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="85dp"
  android:layout_height="85dp"
  android:orientation="vertical">

  <FrameLayout
    android:id="@+id/item_us_spread_frame_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
      android:id="@+id/item_us_spread_upload_image"
      android:layout_width="75dp"
      android:layout_height="75dp"
      android:layout_gravity="bottom|end"
      android:scaleType="fitXY"/>

    <ImageView
      android:id="@+id/item_us_spread_delete_image"
      android:layout_width="20dp"
      android:layout_height="20dp"
      android:src="@drawable/us_spread_upload_image_delete"/>

    <TextView
      android:id="@+id/item_us_spread_media_type"
      android:layout_width="match_parent"
      android:layout_height="22dp"
      android:layout_marginLeft="10dp"
      android:layout_gravity="bottom"
      android:background="#70ea5412"
      android:gravity="center"
      android:text="@string/upload_select_image"
      android:textColor="@color/white"
      android:textSize="11sp"/>
  </FrameLayout>
  <RelativeLayout
    android:id="@+id/item_us_spread_add_image_layout"
    android:layout_width="75dp"
    android:layout_height="75dp"
    android:layout_marginTop="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginLeft="10dp"
    android:background="@color/cf6f6f6"
    android:visibility="gone"
    >
    <ImageView
      android:layout_width="20dp"
      android:layout_height="20dp"
      android:layout_marginTop="18dp"
      android:layout_centerHorizontal="true"
      android:src="@drawable/us_spread_upload_image_add"
      />
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="15dp"
      android:layout_alignParentBottom="true"
      android:layout_centerHorizontal="true"
      android:text="@string/task_upload_add_process_addpic"
      android:textColor="@color/gray_b6b6b6"
      android:textSize="12.5dp"/>
  </RelativeLayout>
  <RelativeLayout
    android:id="@+id/item_us_spread_add_video_layout"
    android:layout_width="75dp"
    android:layout_height="75dp"
    android:layout_marginStart="10dp"
    android:layout_marginLeft="10dp"
    android:background="@color/cf6f6f6"
    android:visibility="gone"
    >
    <ImageView
      android:layout_width="20dp"
      android:layout_height="20dp"
      android:layout_marginTop="18dp"
      android:layout_centerHorizontal="true"
      android:src="@drawable/us_spread_upload_video_add"
      />
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="15dp"
      android:layout_alignParentBottom="true"
      android:layout_centerHorizontal="true"
      android:text="@string/add_video"
      android:textColor="@color/gray_b6b6b6"
      android:textSize="12.5dp"/>
  </RelativeLayout>
</LinearLayout>