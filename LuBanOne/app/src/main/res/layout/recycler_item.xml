<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:paddingTop="5dp"
  android:id="@+id/root"
  android:background="@color/white"
  android:orientation="vertical">

  <RelativeLayout
    android:layout_width="120dp"
    android:layout_height="70dp"
    android:background="@mipmap/shadow3"
    android:gravity="center_vertical">

    <TextView
      android:id="@+id/tv_digital_left"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:layout_marginBottom="20dp"
      android:layout_marginLeft="15dp"
      android:text="0.00"
      android:textColor="@color/cf6410b"
      android:textSize="22sp" />


    <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_marginLeft="10dp"
      android:layout_height="wrap_content"
      android:layout_alignBottom="@+id/tv_digital_left"
      android:layout_toRightOf="@+id/tv_digital_left"
      android:layout_toEndOf="@+id/tv_digital_left"
      >

      <TextView
        android:id="@+id/tv_digital_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="0.00"
        android:textColor="@color/c333"
        android:textSize="10sp" />


      <TextView
        android:id="@+id/tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/tv_digital_right"
        android:gravity="center"
        android:text="0.00"
        android:textColor="@color/c333"
        android:textSize="10sp" />
    </RelativeLayout>


  </RelativeLayout>

</LinearLayout>