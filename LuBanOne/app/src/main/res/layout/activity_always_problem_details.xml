<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/white"
  android:orientation="vertical"
  tools:context="com.example.administrator.lubanone.activity.home.AlwaysProblemDetailsActivity">

  <TextView
    android:layout_width="match_parent"
    android:layout_height="23dp"
    android:background="@color/chead" />

  <RelativeLayout
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
      android:layout_width="match_parent"
      android:layout_height="44dp"
      android:gravity="center"
      android:text="@string/always_problems"
      android:textColor="@color/c333"
      android:textSize="17sp" />

    <ImageView
      android:id="@+id/iv_back"
      android:layout_width="22dp"
      android:layout_height="18dp"
      android:layout_marginLeft="15dp"
      android:layout_centerVertical="true"
      android:src="@mipmap/icon_back_gray" />

    <TextView
      android:id="@+id/tv_back"
      android:layout_width="40dp"
      android:layout_height="30dp"
      android:layout_marginLeft="12dp"
      android:layout_centerVertical="true"
      android:background="@color/transparenc_all"
      android:visibility="gone" />

  </RelativeLayout>

  <TextView
    android:layout_width="match_parent"
    android:layout_height="2dp"
    android:background="@color/cf6f6f6" />


  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">
      <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="21dp"
        android:paddingLeft="15dp"
        android:gravity="center_vertical"
        android:text=""
        android:textColor="@color/c333"
        android:textSize="13sp" />

      <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingLeft="46dp"
        android:paddingRight="46dp"
        android:lineSpacingMultiplier="1.5"
        android:text=""
        android:textColor="#555555"
        android:textSize="11sp" />

      <TextView
        android:id="@+id/tv_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingLeft="46dp"
        android:paddingRight="46dp"
        android:gravity="center_vertical"
        android:lineSpacingMultiplier="1.5"
        android:text=""
        android:textColor="#555555"
        android:textSize="11sp" />


    </LinearLayout>
  </ScrollView>


</LinearLayout>
