<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">
  <TextView
    android:layout_width="match_parent"
    android:layout_height="10dp"
    android:background="@color/white"/>
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:padding="10dp"
    android:background="@drawable/home_page_down_shape"
    android:orientation="vertical">
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="35dp"
      android:orientation="horizontal">

      <TextView
        android:id="@+id/join_training_item_author_tx"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text="@string/join_training_author"
        android:textColor="#666"
        android:textSize="14sp"/>
      <TextView
        android:id="@+id/join_training_item_author"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:textColor="#666"
        android:textSize="14sp"/>
      <TextView
        android:id="@+id/join_training_item_time"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="10dp"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:text="@string/account_bank"
        android:textColor="#666"
        android:textSize="13sp"/>
      <ImageView
        android:id="@+id/join_training_item_detail"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/detail_img"/>

    </LinearLayout>

    <TextView
      android:id="@+id/join_training_item_line"
      android:layout_width="match_parent"
      android:layout_height="0.5dp"
      android:background="#666"/>
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="35dp"
      android:orientation="horizontal">

      <TextView
        android:id="@+id/join_training_item_score_tx"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="9dp"
        android:gravity="center_vertical"
        android:text="@string/join_training_score"
        android:textColor="#666"
        android:textSize="14sp"/>
      <ImageView
        android:id="@+id/join_training_item_score"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/state_one_img"/>
    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="35dp"
      android:orientation="horizontal">

      <TextView
        android:id="@+id/join_training_item_theme_tx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:text="@string/training_theme"
        android:textColor="#666"
        android:textSize="14sp"/>
      <TextView
        android:id="@+id/join_training_item_theme"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:textColor="#666"
        android:textSize="14sp"/>
    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="35dp"
      android:orientation="horizontal">

      <ImageView
        android:id="@+id/join_training_item_discuss_img"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/discuss_content_img"/>
      <TextView
        android:id="@+id/join_training_item_discuss"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text="@string/account_bank"
        android:textColor="#666"
        android:textSize="13sp"/>

    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="35dp"
      android:gravity="end"
      android:orientation="horizontal">

      <ImageView
        android:id="@+id/join_training_item_comment_img"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/discuss_img"/>
      <TextView
        android:id="@+id/join_training_item_comment"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:text="@string/join_training_comment"
        android:textColor="#666"
        android:textSize="14sp"/>
      <ImageView
        android:id="@+id/join_training_item_detele_img"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/detele_img"/>
      <TextView
        android:id="@+id/join_training_item_detele"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text="@string/join_training_detele"
        android:textColor="#666"
        android:textSize="14sp"/>

    </LinearLayout>
  </LinearLayout>

</LinearLayout>