<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/activity_update_land_pwd"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  tools:context="com.example.administrator.lubanone.activity.home.UpdateLandPwdActivity">


  <TextView
    android:layout_width="match_parent"
    android:layout_height="23dp"
    android:background="@color/chead" />

  <FrameLayout
    android:id="@+id/one"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/title_background_blue">

    <TextView
      android:layout_width="match_parent"
      android:layout_height="44dp"
      android:background="@color/white"
      android:gravity="center"
      android:text="@string/update_safe_pwd"
      android:textColor="@color/c333"
      android:textSize="18sp" />

    <ImageView
      android:id="@+id/iv_back"
      android:layout_width="22dp"
      android:layout_height="18dp"
      android:layout_marginLeft="15dp"
      android:layout_gravity="center_vertical"
      android:src="@mipmap/icon_back_gray" />

    <TextView
      android:id="@+id/tv_back"
      android:layout_width="40dp"
      android:layout_height="24dp"
      android:layout_marginLeft="12dp"
      android:layout_gravity="center_vertical"
      android:background="@color/transparenc_all"
      android:visibility="gone" />


  </FrameLayout>


  <LinearLayout
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginTop="10dp"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
      android:id="@+id/up"
      style="@style/home_page_update_land_pwd_style"
      android:layout_width="0dp"
      android:layout_weight="1"
      android:layout_height="match_parent"
      android:paddingLeft="15dp"
      android:text="@string/old_pwd"
      android:textColor="@color/c333" />

    <EditText
      android:id="@+id/tv_old_land_pwd"
      style="@style/home_page_update_land_pwd_style"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="3"
      android:paddingLeft="15dp"
      android:background="@null"
      android:hint="@string/old_land_pwd"
      android:inputType="textPassword"
      android:textColor="@color/c333"
      android:textColorHint="@color/c888" />


    <RelativeLayout
      android:id="@+id/rl_new_second_eye"
      android:layout_width="50dp"
      android:layout_height="match_parent"
      android:paddingRight="15dp"
      android:visibility="gone"
      android:gravity="end|center_vertical">
      <ImageView
        android:id="@+id/iv_old_eye"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@mipmap/eye_close_2x"
        android:visibility="visible" />
    </RelativeLayout>

  </LinearLayout>

  <TextView
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_marginLeft="15dp"
    android:background="@color/cf6f6f6" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
      style="@style/home_page_update_land_pwd_style"
      android:layout_width="0dp"
      android:layout_weight="1"
      android:layout_height="match_parent"
      android:paddingLeft="15dp"
      android:text="@string/new_pwd"
      android:textColor="@color/c333" />

    <EditText
      android:id="@+id/tv_new_land_pwd"
      style="@style/home_page_update_land_pwd_style"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="3"
      android:paddingLeft="15dp"
      android:background="@null"
      android:hint="@string/new_land_pwd"
      android:inputType="numberPassword"
      android:textColor="@color/c333"
      android:textColorHint="@color/c888"
      android:textSize="13sp" />


    <RelativeLayout
      android:id="@+id/rl_old_eye"
      android:layout_width="50dp"
      android:visibility="gone"
      android:layout_height="match_parent"
      android:paddingRight="15dp"
      android:gravity="end|center_vertical">
      <ImageView
        android:id="@+id/iv_new_eye"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@mipmap/eye_close_2x"
        android:visibility="visible" />
    </RelativeLayout>

  </LinearLayout>

  <TextView
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_marginLeft="15dp"
    android:background="@color/cf6f6f6" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
      style="@style/home_page_update_land_pwd_style"
      android:layout_width="0dp"
      android:layout_weight="1"
      android:layout_height="match_parent"
      android:paddingLeft="15dp"
      android:text="@string/confim_pwd"
      android:textColor="@color/c333" />

    <EditText
      android:id="@+id/tv_confim_pwd"
      style="@style/home_page_update_land_pwd_style"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="3"
      android:paddingLeft="15dp"
      android:background="@null"
      android:hint="@string/new_land_pwd_second"
      android:inputType="numberPassword"
      android:textColor="@color/c333"
      android:textColorHint="@color/c888"
      android:textSize="13sp" />


    <!--<RelativeLayout
      android:id="@+id/rl_old_eye"
      android:layout_width="50dp"
      android:visibility="gone"
      android:layout_height="match_parent"
      android:paddingRight="15dp"
      android:gravity="end|center_vertical">
      <ImageView
        android:id="@+id/iv_new_eye"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@mipmap/eye_close_2x"
        android:visibility="visible" />
    </RelativeLayout>-->

  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginTop="10dp"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
      android:id="@+id/tv_phone_check"
      style="@style/home_page_update_land_pwd_style"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:text="@string/phone_check"
      android:visibility="gone" />


    <EditText
      android:id="@+id/et_check_code"
      style="@style/home_page_update_land_pwd_style"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:paddingLeft="15dp"
      android:background="@null"
      android:hint="@string/phone_check"
      android:inputType="number"
      android:textColor="@color/c333"
      android:textColorHint="@color/c888" />

    <!--<TextView-->
    <!--android:id="@+id/tv_send"-->
    <!--android:layout_width="55dp"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_marginEnd="12dp"-->
    <!--android:layout_marginLeft="12dp"-->
    <!--android:layout_marginRight="12dp"-->
    <!--android:layout_gravity="center_vertical"-->
    <!--android:paddingTop="3dp"-->
    <!--android:paddingBottom="3dp"-->
    <!--android:paddingLeft="10dp"-->
    <!--android:paddingRight="10dp"-->
    <!--android:background="@drawable/red_line_shape"-->
    <!--android:gravity="center"-->
    <!--android:text="@string/send"-->
    <!--android:textColor="@color/red"-->
    <!--android:textSize="12sp" />-->

    <TextView
      android:id="@+id/tv_send"
      android:layout_width="wrap_content"
      android:layout_height="25dp"
      android:layout_marginEnd="12dp"
      android:layout_marginLeft="12dp"
      android:layout_marginRight="15dp"
      android:layout_gravity="center_vertical"
      android:gravity="center"
      android:paddingLeft="10dp"
      android:paddingRight="10dp"
      android:textColor="@color/cEA5412"
      android:background="@drawable/get_check_code_shape"
      android:text="@string/send_code"
      android:textSize="12.5sp" />

  </LinearLayout>


  <Button
    android:id="@+id/btn_confirm"
    android:layout_width="match_parent"
    android:layout_marginRight="55dp"
    android:layout_marginLeft="55dp"
    android:layout_height="44dp"
    android:layout_marginTop="47dp"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/blue_bg"
    android:text="@string/confim"
    android:textColor="@color/white" />

</LinearLayout>
