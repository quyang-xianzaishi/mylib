<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.administrator.lubanone.fragment.TrainingFragment"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/blue"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/blue"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">
        <TextView
            android:id="@+id/training_back"
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/back_left_white"
            android:textColor="@color/white"
            android:visibility="gone"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/blue"
            android:textSize="18sp"
            android:text="培训中心"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/white"/>
    </LinearLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/training_tabLayout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#bbb"
        app:tabIndicatorColor="#ea5514"
        app:tabIndicatorHeight="1dp"
        app:tabTextColor="#434343"
        app:tabSelectedTextColor="#ea5514"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/training_fragment_viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>


</LinearLayout>
