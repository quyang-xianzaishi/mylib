<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:paddingTop="5dp"
  android:orientation="vertical">

  <TextView
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:background="#666"/>

  <!--<android.support.v4.widget.SwipeRefreshLayout
    android:id="@+id/training_info_swipe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.RecyclerView
      android:id="@+id/training_infomation_recyclerview"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:divider="@color/gray"
      android:dividerHeight="1dp"/>
  </android.support.v4.widget.SwipeRefreshLayout>-->

  <com.jingchen.pulltorefresh.PullToRefreshLayout
    android:id="@+id/training_infomation_refresh"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1">

    <com.jingchen.pulltorefresh.PullableListView
      android:id="@+id/training_infomation_list"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:cacheColorHint="#00000000"
      android:divider="#bbb"
      android:dividerHeight="0dp"
      android:fadingEdge="none"
      android:listSelector="#00000000"
      android:overScrollMode="never"
      android:scrollbars="none"
      android:background="#f0f0f2"/>

  </com.jingchen.pulltorefresh.PullToRefreshLayout>



