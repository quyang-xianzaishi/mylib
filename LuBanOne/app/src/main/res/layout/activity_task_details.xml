<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <include layout="@layout/activity_status_bar"/>

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@color/white">

    <TextView
      android:id="@+id/task_details_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerInParent="true"
      android:text="@string/task_details"
      android:textColor="@color/black_333333"
      android:textSize="18sp"/>
    <LinearLayout
      android:id="@+id/task_details_back_icon"
      android:layout_width="40dp"
      android:layout_height="match_parent"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_centerVertical="true">
      <ImageView
        android:layout_width="22dp"
        android:layout_height="18.5dp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/icon_back_gray"/>
    </LinearLayout>

    <RelativeLayout
      android:id="@+id/task_details_collect_btn"
      android:layout_width="44dp"
      android:layout_height="match_parent"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:layout_centerVertical="true"
      >
      <ImageView
        android:id="@+id/task_details_collect_image"
        android:layout_width="23dp"
        android:layout_height="21dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/task_collect_normal"/>
    </RelativeLayout>

    <RelativeLayout
      android:id="@+id/task_details_share_btn"
      android:layout_width="44dp"
      android:layout_height="match_parent"
      android:layout_centerVertical="true"
      android:layout_toLeftOf="@+id/task_details_collect_btn"
      android:layout_toStartOf="@+id/task_details_collect_btn">
      <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="6dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/task_share_normal"/>
    </RelativeLayout>
    <View
      android:layout_width="match_parent"
      android:layout_height="0.5dp"
      android:layout_alignParentBottom="true"
      android:background="@color/gray_e7e7e7"/>
  </RelativeLayout>

  <ScrollView
    android:id="@+id/task_details_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:background="@color/white"
    android:scrollbars="none"
    android:visibility="gone">
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginTop="30dp"
      android:layout_marginLeft="15dp"
      android:layout_marginRight="15dp"
      android:background="@color/white"
      android:orientation="vertical">
      <TextView
        android:id="@+id/task_details_content_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dddddddd"
        android:textColor="@color/black_333333"
        android:textSize="15sp"/>
      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">
        <TextView
          android:id="@+id/task_details_reward"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="eeeeee"
          android:textColor="@color/gray_999999"
          android:textSize="11sp"/>
        <TextView
          android:id="@+id/task_details_date"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentEnd="true"
          android:layout_alignParentRight="true"
          android:text="ddddddddd"
          android:textColor="@color/gray_999999"
          android:textSize="11sp"
          />
      </RelativeLayout>
      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="25dp"
        android:background="#bbb">
        <ImageView
          android:id="@+id/task_details_play_image"
          android:layout_width="match_parent"
          android:layout_height="match_parent"/>
        <ImageView
          android:id="@+id/task_details_play_icon"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:layout_centerInParent="true"
          android:src="@drawable/simple_player_center_play"/>
      </RelativeLayout>
      <WebView
        android:id="@+id/task_details_web_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        />
    </LinearLayout>
  </ScrollView>
  <ProgressBar
    android:id="@+id/task_details_progressBar"
    style="?android:attr/progressBarStyleHorizontal"
    android:layout_width="match_parent"
    android:layout_height="2dp"
    android:max="100"
    android:progressDrawable="@drawable/webview_progressba"
    />
  <FrameLayout
    android:id="@+id/task_details_webView_frameLayout"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1">
    <WebView
      android:id="@+id/task_details_only_webView"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      />
  </FrameLayout>


  <TextView
    android:id="@+id/task_upload_image_btn"
    android:layout_width="match_parent"
    android:layout_height="49dp"
    android:background="@color/orange_ea5412"
    android:gravity="center"
    android:text="@string/task_details_upload_btn"
    android:textColor="#ffffff"
    android:textSize="15sp"
    android:visibility="gone"/>

</LinearLayout>