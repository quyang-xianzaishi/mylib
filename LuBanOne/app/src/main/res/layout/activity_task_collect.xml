<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <include layout="@layout/activity_status_bar"/>

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@color/title_background_blue">

    <TextView
      style="@style/page_title"
      android:layout_centerInParent="true"
      android:text="@string/my_collect_train"/>
    <LinearLayout
      android:id="@+id/task_collect_back_icon"
      android:layout_width="40dp"
      android:layout_height="match_parent"
      android:layout_alignParentLeft="true"
      android:layout_centerVertical="true">
      <ImageView
        android:layout_width="22dp"
        android:layout_height="18.5dp"
        android:layout_marginLeft="12dp"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/icon_back_white"/>
    </LinearLayout>
  </RelativeLayout>

  <com.jingchen.pulltorefresh.PullToRefreshLayout
    android:id="@+id/task_collect_no_data"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:visibility="gone"
    >
    <com.jingchen.pulltorefresh.PullableImageView
      android:id="@+id/task_collect_no_data_image"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:padding="130dp"
      android:src="@drawable/loading_fail"/>
  </com.jingchen.pulltorefresh.PullToRefreshLayout>

  <com.jingchen.pulltorefresh.PullToRefreshLayout
    android:id="@+id/task_collect_refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1">
    <com.jingchen.pulltorefresh.PullableListView
      android:id="@+id/task_collect_refresh_listview"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:cacheColorHint="#00000000"
      android:divider="@drawable/task_list_view_divider"
      android:dividerHeight="0.5dp"
      android:fadingEdge="none"
      android:listSelector="#00000000"
      android:overScrollMode="never"
      android:scrollbars="none"
      />
  </com.jingchen.pulltorefresh.PullToRefreshLayout>


</LinearLayout>
