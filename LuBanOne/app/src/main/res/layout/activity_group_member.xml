<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/cf6f6f6">

  <TextView
       android:layout_width="match_parent"
       android:layout_height="25dp"
       android:background="@color/title_background_blue"/>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/title_background_blue"
    android:orientation="horizontal"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <TextView
      android:id="@+id/choose_member_cancle"
      android:layout_width="60dp"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:background="@color/title_background_blue"
      android:text="@string/cancels"
      android:textColor="@color/white"
      android:layout_marginRight="0dp"/>

    <TextView
      android:id="@+id/title"
      android:layout_width="0dp"
      android:layout_height="44dp"
      android:layout_weight="1"
      android:background="@color/title_background_blue"
      android:gravity="center"
      android:text="群成员"
      android:textColor="@color/white"
      android:textSize="18sp"/>

    <TextView
      android:id="@+id/choose_member_commit"
      android:layout_width="60dp"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:background="@color/title_background_blue"
      android:text="确定"
      android:textColor="@color/_888888"
      android:gravity="end"/>

  </LinearLayout>
  <TextView
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/gray_e7e7e7"/>


  <com.example.administrator.lubanone.customview.MySearchView
    android:id="@+id/group_member_search"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:layout_margin="8dp"
    android:background="@drawable/circle_rect_bg"
    app:SearchTextColor="@color/c333"
    app:SearchTextSize="12.5sp"/>

  <TextView
    android:id="@+id/no_data"
    android:layout_width="90dp"
    android:layout_height="100dp"
    android:background="@drawable/no_data"
    android:layout_gravity="center"
    android:layout_marginTop="130dp"
    android:visibility="gone"/>
  <ListView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none"
    android:dividerHeight="0dp"
    android:divider="@color/white"
    android:id="@+id/group_member_list"
    android:visibility="visible"
    android:background="@color/white"/>

</LinearLayout>