<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@color/white"
  android:orientation="vertical">

  <TextView
    android:id="@+id/tv_order_id"
    style="@style/buy_seeds_no_money_text_style"
    android:layout_width="wrap_content"
    android:layout_height="40dp"
    android:text="订单编号"
    android:textColor="@color/c333"/>


  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:background="#F9F9F9"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
      android:id="@+id/tv_seeds_count"
      style="@style/seed_count_style"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:text="" />

    <TextView
      android:id="@+id/tv_seller"
      style="@style/match_sell_style"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:text="@string/seller_vip" />


  </LinearLayout>


  <TextView
    android:id="@+id/tv_heji"
    style="@style/heji_style"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:text="@string/heji_new" />


  <TextView
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/cf6f6f6" />

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:gravity="center_vertical">


    <TextView
      android:id="@+id/tv_upload_proof"
      style="@style/btn_style"
      android:layout_width="65dp"
      android:layout_height="26dp"
      android:layout_marginRight="12dp"
      android:layout_alignParentRight="true"
      android:gravity="center"
      android:text="@string/ping_jia"
      android:textSize="13sp" />

  </RelativeLayout>


</LinearLayout>