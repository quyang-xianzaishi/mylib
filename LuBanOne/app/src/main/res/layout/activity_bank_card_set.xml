<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/activity_register"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    android:background="@color/blue">

    <TextView
      android:layout_width="match_parent"
      android:layout_height="44dp"
      android:gravity="center"
      android:text="@string/add_bank_account"
      android:textColor="@color/white"
      android:textSize="17sp" />

    <ImageView
      android:id="@+id/iv_back"
      android:layout_width="10dp"
      android:layout_height="14dp"
      android:layout_marginLeft="12dp"
      android:layout_gravity="center_vertical"
      android:src="@mipmap/back__white_2x" />

    <TextView
      android:id="@+id/tv_back"
      android:layout_width="40dp"
      android:layout_height="30dp"
      android:layout_marginLeft="12dp"
      android:layout_centerVertical="true"
      android:background="@color/transparenc_all" />


  </FrameLayout>


  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:paddingTop="50dp"
    android:paddingLeft="38dp"
    android:paddingRight="38dp"
    android:background="@color/white">

    <LinearLayout
      android:id="@+id/ll_user_name"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

      <TextView
        style="@style/land_text_sty"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:gravity="center_vertical"
        android:text="@string/names_space" />

      <TextView
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/gray" />


      <TextView
        android:id="@+id/user_name_input"
        style="@style/land_et_sty"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="17"
        android:background="@null"
        android:gravity="center_vertical" />

    </LinearLayout>

    <TextView
      android:id="@+id/line"
      android:layout_width="match_parent"
      android:layout_height="1px"
      android:layout_marginTop="5dp"
      android:layout_marginBottom="16dp"
      android:layout_below="@+id/ll_user_name"
      android:background="@color/gray" />

    <LinearLayout
      android:id="@+id/ll_pwd"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/line"
      android:orientation="horizontal">

      <TextView
        style="@style/land_text_sty"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:gravity="center_vertical"
        android:text="@string/bank_name" />

      <TextView
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/gray" />

      <TextView
        android:id="@+id/tv_choosen_bank"
        style="@style/land_et_sty"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="17"
        android:background="@null"
        android:drawableRight="@mipmap/down_2x_gray"
        android:gravity="center_vertical"
        android:hint="@string/select_bank" />

    </LinearLayout>

    <TextView
      android:id="@+id/line_two"
      android:layout_width="match_parent"
      android:layout_height="1px"
      android:layout_marginTop="5dp"
      android:layout_marginBottom="16dp"
      android:layout_below="@+id/ll_pwd"
      android:background="@color/gray" />

    <LinearLayout
      android:id="@+id/ll_phone"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="5dp"
      android:layout_below="@+id/line_two"
      android:orientation="horizontal">


      <TextView
        style="@style/land_text_sty"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:gravity="center_vertical"
        android:text="@string/account_bank" />

      <TextView
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/gray" />

      <EditText
        android:id="@+id/et_card_number"
        style="@style/land_et_sty"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="17"
        android:layout_marginLeft="4dp"
        android:background="@null"
        android:gravity="center_vertical"
        android:hint="@string/input_open_bank" />

    </LinearLayout>


    <TextView
      android:id="@+id/line_three"
      android:layout_width="match_parent"
      android:layout_height="1px"
      android:layout_marginBottom="16dp"
      android:layout_below="@+id/ll_phone"
      android:background="@color/gray" />

    <LinearLayout
      android:id="@+id/ll_check_code"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="5dp"
      android:layout_below="@+id/line_three"
      android:orientation="horizontal">


      <TextView
        style="@style/land_text_sty"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:gravity="center_vertical"
        android:text="@string/bank_account" />

      <TextView
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/gray" />

      <EditText
        android:id="@+id/user_check_code_input"
        style="@style/land_et_sty"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="17"
        android:layout_marginLeft="4dp"
        android:background="@null"
        android:gravity="center_vertical"
        android:hint="@string/input_open_bank" />
    </LinearLayout>


    <TextView
      android:id="@+id/line_four"
      android:layout_width="match_parent"
      android:layout_height="1px"
      android:layout_marginBottom="16dp"
      android:layout_below="@+id/ll_check_code"
      android:background="@color/gray" />


    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_above="@+id/btn_commit"
      android:drawablePadding="4dp"
      android:drawableTop="@mipmap/warm_color_2x"
      android:gravity="center"
      android:text="@string/complete_tips"
      android:textColor="@color/cbbb"
      android:textSize="11sp" />

    <Button
      android:id="@+id/btn_commit"
      style="@style/btn_selector"
      android:layout_width="130dp"
      android:layout_height="38dp"
      android:layout_marginTop="50dp"
      android:layout_marginBottom="80dp"
      android:layout_alignParentBottom="true"
      android:layout_centerHorizontal="true"
      android:gravity="center"
      android:text="@string/commit"
      android:textSize="16sp" />

  </RelativeLayout>


</LinearLayout>
