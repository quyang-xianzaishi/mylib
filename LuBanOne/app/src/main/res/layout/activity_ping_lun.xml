<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/activity_ping_lun"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:focusable="true"
  android:focusableInTouchMode="true"
  android:orientation="vertical"
  tools:context="com.example.administrator.lubanone.activity.home.PingLunActivity">


  <TextView
    android:layout_width="match_parent"
    android:layout_height="25dp"
    android:background="@color/chead" />


  <FrameLayout
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
      android:layout_width="match_parent"
      android:layout_height="44dp"
      android:gravity="center"
      android:text="@string/order_details"
      android:textColor="@color/c333"
      android:textSize="18sp" />

    <ImageView
      android:id="@+id/iv_back"
      android:layout_width="22dp"
      android:layout_height="18dp"
      android:layout_marginLeft="15dp"
      android:layout_gravity="center_vertical"
      android:src="@mipmap/icon_back_gray" />

    <TextView
      android:id="@+id/tv_back"
      android:layout_width="40dp"
      android:layout_height="30dp"
      android:layout_marginLeft="12dp"
      android:layout_gravity="center_vertical"
      android:background="@color/transparenc_all"
      android:visibility="gone" />

  </FrameLayout>

  <TextView
    android:id="@+id/tv_tips"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:paddingTop="22dp"
    android:paddingBottom="26dp"
    android:background="@color/white"
    android:gravity="center"
    android:text="@string/give_stars"
    android:textColor="@color/c333"
    android:textSize="13sp" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:paddingBottom="25dp"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="horizontal">

    <com.iarcuschin.simpleratingbar.SimpleRatingBar
      android:id="@+id/rating_bar"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      app:srb_borderColor="@color/gray"
      app:srb_fillColor="@color/cEA5412"
      app:srb_numberOfStars="5"
      app:srb_starBorderWidth="2"
      app:srb_starSize="18dp"
      app:srb_starsSeparation="6dp"
      app:srb_stepSize="1" />

    <TextView
      android:id="@+id/tv_good"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="6dp"
      android:textColor="@color/c333"
      android:textSize="15sp" />

  </LinearLayout>


  <EditText
    android:id="@+id/et_ping_lun"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:padding="15dp"
    android:background="@color/white"
    android:gravity="center"
    android:hint="@string/input_ping_jia"
    android:textColor="@color/c333"
    android:textColorHint="#888888"
    android:textSize="12.5sp" />


  <Button
    android:id="@+id/btn"
    android:layout_width="match_parent"
    android:layout_height="37dp"
    android:layout_marginTop="30dp"
    android:layout_marginLeft="55dp"
    android:layout_marginRight="55dp"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/oragine_shape"
    android:text="@string/commits"
    android:textColor="@color/white" />

</LinearLayout>
