<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  tools:context="com.example.administrator.lubanone.activity.home.BuySeedsRecordDetailsActivity">

  <TextView
    android:layout_width="match_parent"
    android:layout_height="25dp"
    android:background="@color/title_background_blue" />

  <LinearLayout
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
      android:id="@+id/iv_back"
      android:layout_width="22dp"
      android:layout_height="18dp"
      android:layout_marginLeft="15dp"
      android:src="@mipmap/icon_back_gray" />

    <TextView
      android:id="@+id/tv_title"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:layout_marginRight="37dp"
      android:gravity="center"
      android:text="@string/buy_seed_process_details"
      android:textColor="@color/c333"
      android:textSize="17sp" />

  </LinearLayout>

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingBottom="30dp"
      android:orientation="vertical">

      <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/cf6f6f6" />

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="2"
          android:paddingLeft="15dp"
          android:gravity="center_vertical"
          android:text="@string/get_seeds"
          android:textColor="@color/c333"
          android:textSize="12.5sp" />

        <TextView
          android:id="@+id/tv_get_seed_count"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="2"
          android:paddingRight="15dp"
          android:gravity="center_vertical|end"
          android:text=""
          android:textColor="@color/c333"
          android:textSize="25sp" />

      </LinearLayout>


      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal">


        <TextView
          android:layout_width="15dp"
          android:layout_height="match_parent"
          android:background="@color/white"
          android:visibility="visible" />

        <TextView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="@color/cf6f6f6"
          android:visibility="visible" />

      </LinearLayout>


      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
          android:id="@+id/textView14"
          style="@style/new_scan_style"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="2"
          android:text="@string/order_id"
          android:textColor="#888888"/>

        <TextView
          android:id="@+id/tv_order_id"
          style="@style/new_seeds_details"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="2"
          android:text=""
          android:textColor="#888888"/>

      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
          style="@style/new_scan_style"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="2"
          android:text="@string/seed_count_new"
          android:textColor="#888888"/>

        <TextView
          android:id="@+id/tv_seed_count"
          style="@style/new_seeds_details"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="2"
          android:text=""
          android:textColor="#888888"/>

      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
          style="@style/new_scan_style"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="2"
          android:text="@string/match_time_new"
          android:textColor="#888888"/>

        <TextView
          android:id="@+id/tv_match_time"
          style="@style/new_seeds_details"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="2"
          android:text=""
          android:textColor="#888888"/>

      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
          style="@style/new_scan_style"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="2"
          android:text="@string/money_time_new"
          android:textColor="#888888"/>

        <TextView
          android:id="@+id/tv_money_time"
          style="@style/new_seeds_details"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="2"
          android:text=""
          android:textColor="#888888"/>

      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
          style="@style/new_scan_style"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="2"
          android:text="@string/complete_time_new"
          android:textColor="#888888"/>

        <TextView
          android:id="@+id/tv_complete_time"
          style="@style/new_seeds_details"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="2"
          android:text=""
          android:textColor="#888888"/>

      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
          style="@style/new_scan_style"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="2"
          android:text="@string/money_receiver"
          android:textColor="#888888"/>

        <TextView
          android:id="@+id/tv_money_receiver"
          style="@style/new_seeds_details"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="2"
          android:text=""
          android:textColor="#888888"/>

      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
          style="@style/new_scan_style"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="2"
          android:text="@string/get_ping_feng"
          android:textColor="#888888"/>

        <TextView
          android:id="@+id/tv_get_pingfeng"
          style="@style/new_seeds_details"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="2"
          android:text=""
          android:textColor="#888888"/>

      </LinearLayout>


      <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/cf6f6f6" />


      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
          android:id="@+id/textView15"
          style="@style/new_scan_style"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="2"
          android:text="@string/grow_status"
          android:textColor="@color/c333"
          android:textSize="13sp" />

        <TextView
          android:id="@+id/tv_grow_status"
          style="@style/new_seeds_details"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="2"
          android:text=""
          android:textColor="@color/cEA5412" />

      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal">


        <TextView
          android:layout_width="15dp"
          android:layout_height="match_parent"
          android:background="@color/white"
          android:visibility="visible" />

        <TextView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="@color/cf6f6f6"
          android:visibility="visible" />

      </LinearLayout>


      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
          style="@style/new_scan_style"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="2"
          android:text="@string/grow_day"
          android:textColor="@color/c333"
          android:textSize="13sp" />

        <TextView
          android:id="@+id/tv_grow_day"
          style="@style/new_seeds_details"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="2"
          android:text=""
          android:textColor="@color/cEA5412" />

      </LinearLayout>


      <TextView
        android:id="@+id/tv_reap"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="@string/reap_seeds"
        android:textColor="@color/red" />


    </LinearLayout>

  </ScrollView>


</LinearLayout>
