<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="12dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/training_back_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/active_four_step"
            android:textSize="14sp"
            android:paddingBottom="8dp"
            android:textColor="#666"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="bottom">

            <TextView
                android:id="@+id/training_back_item_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/training_play_back_bg"
                android:gravity="center"
                android:text="@string/training_back"
                android:layout_marginRight="5dp"
                android:padding="2dp"
                android:textSize="14sp"
                android:textColor="#666"
                android:layout_gravity="bottom"/>

            <TextView
                android:id="@+id/training_back_item_audience"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:text="@string/training_audience"
                android:textColor="#666"
                android:textSize="12sp"/>
            <TextView
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:background="#666"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>

            <TextView
                android:id="@+id/training_back_item_point_count"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:text="@string/training_point_count"
                android:textColor="#666"
                android:textSize="12sp"/>

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/training_back_item_image"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:src="@drawable/em_chat_video_normal"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black"/>

</LinearLayout>