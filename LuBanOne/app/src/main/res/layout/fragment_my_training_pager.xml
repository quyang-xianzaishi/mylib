<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/cf6f6f6"
  android:orientation="vertical">
  <include layout="@layout/activity_status_bar"/>

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@color/title_background_blue">

    <TextView
      style="@style/page_title"
      android:layout_centerInParent="true"
      android:text="@string/train_my_train"/>
    <LinearLayout
      android:id="@+id/train_mine_back_btn"
      android:layout_width="40dp"
      android:layout_height="match_parent"
      android:layout_alignParentLeft="true"
      android:layout_centerVertical="true">
      <ImageView
        android:layout_width="22dp"
        android:layout_height="18.5dp"
        android:layout_marginLeft="12dp"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/icon_back_white"/>
    </LinearLayout>
  </RelativeLayout>
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="horizontal"
    android:visibility="gone"
    >
    <TextView
      android:id="@+id/train_i_join"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_marginRight="10dp"
      android:gravity="center"
      android:text="@string/i_join_train"
      android:textColor="@color/selector_text_orange"/>
    <View
      android:layout_width="1dp"
      android:layout_height="20dp"
      android:background="#bbb"/>
    <TextView
      android:id="@+id/train_i_upload"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_marginLeft="10dp"
      android:layout_marginRight="10dp"
      android:gravity="center"
      android:text="@string/i_upload_train"
      android:textColor="@color/selector_text_orange"/>
    <View
      android:layout_width="1dp"
      android:layout_height="20dp"
      android:background="#bbb"/>
    <TextView
      android:id="@+id/train_my_collect"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_marginLeft="10dp"
      android:gravity="center"
      android:text="@string/my_collect_train"
      android:textColor="@color/selector_text_orange"/>

  </LinearLayout>
  <android.support.design.widget.TabLayout
    android:id="@+id/train_mine_tab_layout"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@color/white"
    app:tabIndicatorColor="@color/orange_ea5412"
    app:tabIndicatorHeight="2dp"
    app:tabSelectedTextColor="@color/orange_ea5412"
    app:tabTextAppearance="@style/tab_layout_text_style"
    />
  <View
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:background="@color/gray_e7e7e7"/>

  <!--<com.example.administrator.lubanone.customview.UnScrollViewPager-->
  <!--android:id="@+id/my_training_pager"-->
  <!--android:layout_width="match_parent"-->
  <!--android:layout_height="0dp"-->
  <!--android:layout_weight="1"/>-->
  <android.support.v4.view.ViewPager
    android:id="@+id/my_training_pager"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"/>

</LinearLayout>