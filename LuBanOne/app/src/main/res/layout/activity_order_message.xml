<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:background="#f6f6f6">

  <TextView
    android:layout_width="match_parent"
    android:layout_height="25dp"
    android:background="@color/title_background_blue" />

  <include layout="@layout/activity_order_message_title" />
  <TextView
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/gray_e7e7e7"/>


  <com.jingchen.pulltorefresh.PullToRefreshLayout
    android:id="@+id/no_data"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:visibility="gone"
    android:background="#f6f6f6">

    <com.jingchen.pulltorefresh.PullableImageView
      android:id="@+id/no_data_image"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:padding="130dp"
      android:src="@drawable/no_data"/>

  </com.jingchen.pulltorefresh.PullToRefreshLayout>


  <com.jingchen.pulltorefresh.PullToRefreshLayout
    android:id="@+id/order_message_refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f6">


    <com.jingchen.pulltorefresh.PullableListView
      android:id="@+id/order_message_list"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:paddingTop="10dp"
      android:background="#f6f6f6"
      android:cacheColorHint="#00000000"
      android:divider="#bbb"
      android:dividerHeight="0dp"
      android:listSelector="#00000000"
      android:scrollbars="none" />


  </com.jingchen.pulltorefresh.PullToRefreshLayout>


</LinearLayout>