<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/activity_register"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/white">

  <RelativeLayout
    android:id="@+id/rl_container"
    android:layout_width="match_parent"
    android:layout_height="290dp">


    <ImageView
      android:id="@+id/icon"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_centerHorizontal="true"
      android:src="@mipmap/suc_bg" />


    <TextView
      android:layout_width="match_parent"
      android:gravity="center"
      android:layout_height="wrap_content"
      android:text="@string/active_complete_one"
      android:layout_marginTop="98dp"
      android:textColor="@color/cE74113"
      android:textSize="15sp" />


  </RelativeLayout>


  <LinearLayout
    android:id="@+id/bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="55dp"
    android:layout_below="@+id/rl_container"
    android:orientation="vertical">


    <Button
      android:id="@+id/go_to_set"
      android:layout_width="match_parent"
      android:layout_height="44dp"
      android:layout_weight="1"
      android:layout_marginLeft="55dp"
      android:layout_marginRight="55dp"
      android:background="@drawable/all_blue_shape_10"
      android:gravity="center"
      android:text="@string/account_set"
      android:textColor="@color/white"
      android:textSize="18sp" />


    <Button
      android:id="@+id/go_to_main_page"
      android:layout_width="match_parent"
      android:layout_height="44dp"
      android:layout_marginTop="10dp"
      android:layout_marginLeft="55dp"
      android:layout_marginRight="55dp"
      android:background="@drawable/round_black"
      android:gravity="center"
      android:text="@string/go_to_main_page_new"
      android:textColor="@color/blue"
      android:textSize="18sp" />


  </LinearLayout>
</RelativeLayout>
