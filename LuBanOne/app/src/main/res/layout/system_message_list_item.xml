<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#f6f6f6">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:background="@drawable/white_gray_round_shape"
    android:layout_marginBottom="20dp"
    android:padding="10dp">

    <TextView
      android:id="@+id/system_message_list_item_title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textColor="@color/c333"
      android:textSize="12.5sp"
      android:text="@string/account"/>

    <TextView
      android:id="@+id/system_message_list_item_time"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textColor="#888888"
      android:textSize="11sp"
      android:text="@string/account"
      android:paddingTop="10dp"/>

    <TextView
      android:id="@+id/system_message_list_item_content"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textColor="@color/c333"
      android:textSize="11sp"
      android:text="@string/account"
      android:paddingTop="25dp"
      android:maxLines="5"
      android:lineSpacingExtra="5dp"/>

    <TextView
      android:id="@+id/system_message_list_item_enter_detail"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/blue"
      android:textSize="14sp"
      android:text="@string/enter_detail"
      android:paddingBottom="8dp"
      android:paddingTop="8dp"
      android:maxLines="1"
      android:layout_gravity="end"
      android:visibility="gone"/>

    <TextView
      android:id="@+id/system_message_list_item_enter_custom"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/blue"
      android:textSize="14sp"
      android:text="@string/enter_custom"
      android:paddingBottom="8dp"
      android:paddingTop="8dp"
      android:maxLines="1"
      android:layout_gravity="end"
      android:visibility="gone"/>

  </LinearLayout>

</LinearLayout>