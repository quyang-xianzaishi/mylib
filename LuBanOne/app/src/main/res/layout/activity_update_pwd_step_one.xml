<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/cf6f6f6"
  android:orientation="vertical"
  tools:context="com.example.administrator.lubanone.activity.land.UpdatePwdStepOneActivity">

  <TextView
    android:layout_width="match_parent"
    android:layout_height="23dp"
    android:background="@color/chead" />

  <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
      android:layout_width="match_parent"
      android:layout_height="44dp"
      android:gravity="center"
      android:text="@string/find_pwd"
      android:textColor="@color/c333"
      android:textSize="17sp" />

    <ImageView
      android:id="@+id/iv_back"
      android:layout_width="22dp"
      android:layout_height="18dp"
      android:layout_marginLeft="15dp"
      android:layout_gravity="center_vertical"
      android:src="@mipmap/icon_back_gray" />

    <TextView
      android:id="@+id/tv_back"
      android:layout_width="40dp"
      android:layout_height="24dp"
      android:layout_marginLeft="12dp"
      android:layout_gravity="center_vertical"
      android:background="@color/transparenc_all"
      android:visibility="gone" />


  </FrameLayout>


  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="168dp"
    android:gravity="center"
    android:background="@color/cf6f6f6">

    <ImageView
      android:id="@+id/icon"
      android:layout_width="match_parent"
      android:layout_height="46dp"
      android:layout_marginLeft="98dp"
      android:layout_marginRight="98dp"
      android:layout_centerHorizontal="true"
      android:src="@mipmap/logo_new" />

  </RelativeLayout>


  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:paddingLeft="15dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <TextView
      android:id="@+id/textView9"
      android:layout_width="80dp"
      android:layout_height="match_parent"
      android:gravity="center_vertical"
      android:text="@string/user_name"
      android:textColor="@color/c333"
      android:textSize="12.5sp" />


    <EditText
      android:id="@+id/et_user_name"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:paddingBottom="5dp"
      android:background="@null"
      android:gravity="center_vertical"
      android:hint="@string/please_input_user_name"
      android:textColor="@color/c333"
      android:textColorHint="@color/_888888"
      android:textSize="12.5sp" />

  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:orientation="horizontal">

    <TextView
      android:layout_width="15dp"
      android:layout_height="match_parent"
      android:background="@color/white" />

    <TextView
      android:layout_width="match_parent"
      android:layout_height="1px"
      android:background="@color/cf6f6f6" />

  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:paddingLeft="15dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <TextView
      android:layout_width="80dp"
      android:layout_height="match_parent"
      android:gravity="center_vertical"
      android:text="@string/phone_number"
      android:textColor="@color/c333"
      android:textSize="12.5sp" />


    <EditText
      android:id="@+id/et_user_phone"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:paddingBottom="5dp"
      android:background="@null"
      android:inputType="number"
      android:gravity="center_vertical"
      android:hint="@string/input_phone_number"
      android:textColor="@color/c333"
      android:textColorHint="@color/_888888"
      android:textSize="12.5sp" />

    <TextView
      android:id="@+id/tv_send"
      android:layout_width="wrap_content"
      android:layout_height="27dp"
      android:layout_marginLeft="12dp"
      android:layout_marginRight="15dp"
      android:layout_gravity="center_vertical"
      android:gravity="center"
      android:paddingLeft="10dp"
      android:paddingRight="10dp"
      android:textColor="@color/cEA5412"
      android:background="@drawable/get_check_code_shape"
      android:text="@string/get_check_code"
      android:textSize="11sp" />

  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:orientation="horizontal">

    <TextView
      android:layout_width="15dp"
      android:layout_height="match_parent"
      android:background="@color/white" />

    <TextView
      android:layout_width="match_parent"
      android:layout_height="1px"
      android:background="@color/cf6f6f6" />

  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:paddingLeft="15dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <TextView
      android:layout_width="80dp"
      android:layout_height="match_parent"
      android:gravity="center_vertical"
      android:text="@string/check_code_one"
      android:textColor="@color/c333"
      android:textSize="12.5sp" />


    <EditText
      android:id="@+id/et_check_code"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:paddingBottom="5dp"
      android:background="@null"
      android:gravity="center_vertical"
      android:hint="@string/please_input_check"
      android:inputType="number"
      android:textColor="@color/c333"
      android:textColorHint="@color/_888888"
      android:textSize="12.5sp" />

  </LinearLayout>


  <Button
    android:id="@+id/btn_ok"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:layout_marginTop="30dp"
    android:layout_marginLeft="55dp"
    android:layout_marginRight="55dp"
    android:background="@drawable/all_blue_shape_10"
    android:text="@string/btn_next"
    android:textColor="@color/white" />

</LinearLayout>
