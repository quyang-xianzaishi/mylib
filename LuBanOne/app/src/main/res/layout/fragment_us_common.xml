<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="25dp"
    android:background="@color/blue">

    <TextView
      android:id="@+id/us_common_fragment_title"
      android:layout_width="match_parent"
      android:layout_height="44dp"
      android:gravity="center"
      android:text="@string/us_table_iac_title"
      android:textColor="@color/white"
      android:textSize="18sp"/>
    <LinearLayout
      android:id="@+id/us_common_fragment_back"
      android:layout_width="40dp"
      android:layout_height="match_parent"
      android:layout_alignParentLeft="true"
      android:layout_centerVertical="true"
      android:layout_gravity="center_vertical">
      <ImageView
        android:layout_width="22dp"
        android:layout_height="18.5dp"
        android:layout_marginLeft="12dp"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/icon_back_white"/>
    </LinearLayout>

  </FrameLayout>

  <android.support.design.widget.TabLayout
    android:id="@+id/us_common_fragment_tablayout"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@color/white"
    app:tabGravity="fill"
    app:tabIndicatorColor="#EA5412"
    app:tabIndicatorHeight="2dp"
    app:tabMode="fixed"
    app:tabSelectedTextColor="#EA5412"
    app:tabTextAppearance="@style/tab_layout_text_style"
    />
  <View
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:background="@color/gray_e7e7e7"/>
  <android.support.v4.view.ViewPager
    android:id="@+id/us_common_fragment_viewpager"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"/>
</LinearLayout>