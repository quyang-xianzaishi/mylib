<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:background="@drawable/white_round_shape"
  android:orientation="vertical">
  <LinearLayout
    android:layout_width="280dp"
    android:layout_height="150dp"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
      android:id="@+id/notify_alert_content"
      android:layout_width="wrap_content"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:gravity="center"
      android:text="@string/sure_notify_member"
      android:textColor="@color/black"
      android:textSize="17sp"/>
    <View
      android:layout_width="match_parent"
      android:layout_height="0.5dp"
      android:layout_marginLeft="5dp"
      android:layout_marginRight="5dp"
      android:background="@color/gray_e7e7e7"
      />
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="44dp"
      android:orientation="horizontal">
      <TextView
        android:id="@+id/notify_alert_cancel"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/cancels"
        android:textColor="@color/gray_888888"
        android:textSize="17sp"/>
      <View
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@color/gray_e7e7e7"
        />
      <TextView
        android:id="@+id/notify_alert_confirm"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/confirm"
        android:textColor="@color/title_background_blue"
        android:textSize="17sp"/>
    </LinearLayout>

  </LinearLayout>
</LinearLayout>