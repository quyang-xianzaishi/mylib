<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:paddingTop="20dp">

        <TextView
            style="@style/page_title"
            android:gravity="center"
            android:text="@string/us_table_spread_title"
            />

        <ImageView
            android:id="@+id/us_table_spread_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:src="@mipmap/back_white_3x"/>
    </FrameLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/us_frag_iac_tablayout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#d0d0d0"
        app:tabIndicatorColor="#ea5514"
        app:tabIndicatorHeight="3dp"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="#ea5514"
        app:tabTextColor="@color/black"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/us_frag_iac_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>