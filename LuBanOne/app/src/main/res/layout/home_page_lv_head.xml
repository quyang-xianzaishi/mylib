<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <include
      android:id="@+id/buy_sell_btn"
      layout="@layout/home_page_btn" />

    <include
      android:id="@+id/buy_layout"
      layout="@layout/home_page_buy_sell_new" />

    <include
      android:id="@+id/sell_layout"
      layout="@layout/home_page_buy_sell_new" />


    <TextView
      android:id="@+id/tv_growing"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:layout_marginBottom="7dp"
      android:layout_marginLeft="12dp"
      android:layout_marginRight="12dp"
      android:paddingLeft="5dp"
      android:text="@string/growind_seed"
      android:textColor="#353535"
      android:textSize="11sp" />

    <TextView
      android:id="@+id/line"
      android:layout_width="match_parent"
      android:layout_height="1px"
      android:layout_marginLeft="17dp"
      android:layout_marginRight="17dp"
      android:layout_below="@+id/tip_text"
      android:background="@color/transparency_light_black" />

  </LinearLayout>

  <RelativeLayout
    android:id="@+id/empty_layout"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:background="@color/white"
    android:visibility="gone">

    <ImageView
      android:id="@+id/iv_icon"
      android:layout_width="100dp"
      android:layout_height="100dp"
      android:layout_centerInParent="true"
      android:src="@mipmap/empty" />

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:layout_below="@+id/iv_icon"
      android:layout_centerHorizontal="true"
      android:text="@string/no_more_message"
      android:textColor="@color/gray"
      android:textSize="15sp" />

  </RelativeLayout>

</LinearLayout>