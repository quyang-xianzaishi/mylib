<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/train_details"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/white"
  android:orientation="vertical">
  <include layout="@layout/activity_status_bar"/>

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@color/white">

    <TextView
      android:id="@+id/task_details_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerInParent="true"
      android:text="@string/train_details"
      android:textColor="@color/black_333333"
      android:textSize="18sp"/>
    <LinearLayout
      android:id="@+id/train_details_back_icon"
      android:layout_width="40dp"
      android:layout_height="match_parent"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_centerVertical="true">
      <ImageView
        android:layout_width="22dp"
        android:layout_height="18.5dp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/icon_back_gray"/>
    </LinearLayout>

    <RelativeLayout
      android:id="@+id/train_details_collect_btn"
      android:layout_width="44dp"
      android:layout_height="match_parent"
      android:layout_above="@+id/view"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true">
      <ImageView
        android:id="@+id/train_details_collect_image"
        android:layout_width="23dp"
        android:layout_height="21dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/task_collect_normal"/>
    </RelativeLayout>

    <RelativeLayout
      android:id="@+id/train_details_share_btn"
      android:layout_width="44dp"
      android:layout_height="match_parent"
      android:layout_centerVertical="true"
      android:layout_toLeftOf="@+id/train_details_collect_btn"
      android:layout_toStartOf="@+id/train_details_collect_btn">
      <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="6dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/task_share_normal"/>
    </RelativeLayout>
    <View
      android:id="@+id/view"
      android:layout_width="match_parent"
      android:layout_height="0.5dp"
      android:layout_alignParentBottom="true"
      android:background="@color/gray_e7e7e7"/>
  </RelativeLayout>
  <ScrollView
    android:id="@+id/train_details_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone">
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">


      <TextView
        android:id="@+id/train_details_theme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        />

      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
          android:id="@+id/train_details_uploader"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="12dp"
          android:layout_alignParentLeft="true"
          android:layout_centerVertical="true"/>
        <TextView
          android:id="@+id/train_details_upload_time"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginRight="12dp"
          android:layout_alignParentRight="true"
          android:layout_centerVertical="true"/>
      </RelativeLayout>
      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
          android:id="@+id/train_details_score"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="12dp"
          android:layout_alignParentLeft="true"
          android:layout_centerVertical="true"/>
        <TextView
          android:id="@+id/train_details_status"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginRight="12dp"
          android:layout_alignParentRight="true"
          android:layout_centerVertical="true"/>
      </RelativeLayout>

      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#bbb">
        <ImageView
          android:id="@+id/train_details_play_image"
          android:layout_width="match_parent"
          android:layout_height="match_parent"/>
        <ImageView
          android:id="@+id/train_details_play_icon"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:layout_centerInParent="true"
          android:src="@drawable/simple_player_center_play"/>
      </RelativeLayout>

      <WebView
        android:id="@+id/train_details_webview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
      </WebView>
    </LinearLayout>
  </ScrollView>
  <ProgressBar
    android:id="@+id/train_list_details_progressBar"
    style="?android:attr/progressBarStyleHorizontal"
    android:layout_width="match_parent"
    android:layout_height="2dp"
    android:max="100"
    android:progressDrawable="@drawable/webview_progressba"
    />
  <WebView
    android:id="@+id/train_details_only_webView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    />
</LinearLayout>