<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:dither="true"
            android:shape="oval">
            <stroke
                android:width="1dp"
                android:color="@color/blue"/>
            <size
                android:width="2dp"
                android:height="2dp"/>
        </shape>
    </item>
    <item
        android:bottom="3dp"
        android:left="3dp"
        android:right="3dp"
        android:top="3dp">
        <shape android:shape="oval">
            <solid android:color="@color/blue"/>
            <size
                android:width="4dp"
                android:height="4dp"/>
        </shape>
    </item>
</layer-list>