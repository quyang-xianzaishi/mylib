<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="85dp"
  android:layout_height="85dp"
  android:orientation="vertical">

  <FrameLayout
    android:id="@+id/item_us_spread_frame_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
      android:id="@+id/item_us_spread_upload_image"
      android:layout_width="75dp"
      android:layout_height="75dp"
      android:layout_gravity="bottom|end"
      android:scaleType="fitXY"/>

    <ImageView
      android:id="@+id/item_us_spread_delete_image"
      android:layout_width="20dp"
      android:layout_height="20dp"
      android:src="@drawable/us_spread_upload_image_delete"/>

    <TextView
      android:id="@+id/item_us_spread_media_type"
      android:layout_width="match_parent"
      android:layout_height="22dp"
      android:layout_marginLeft="10dp"
      android:layout_gravity="bottom"
      android:background="#70ea5412"
      android:gravity="center"
      android:text="@string/upload_select_image"
      android:textColor="#ffffff"
      android:textSize="11sp"/>
  </FrameLayout>

</LinearLayout>